<server>

	<application
		type="war"
		id="formlogin"
		name="formlogin"
		location="${server.config.dir}/test-apps/formlogin.war"
	>
		<application-bnd>
			<security-role name="Employee">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
			<security-role name="Manager">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
			<security-role name="AllAuthenticated">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
		</application-bnd>
	</application>

	<application
		type="war"
		id="unprotectedformlogin"
		name="unprotectedformlogin"
		location="${server.config.dir}/test-apps/formlogin.war"
	>
		<application-bnd>
			<security-role name="Employee">
				<special-subject type="EVERYONE" />
			</security-role>
			<security-role name="Manager">
				<special-subject type="EVERYONE" />
			</security-role>
			<security-role name="AllAuthenticated">
				<special-subject type="EVERYONE" />
			</security-role>
		</application-bnd>
	</application>

</server>
