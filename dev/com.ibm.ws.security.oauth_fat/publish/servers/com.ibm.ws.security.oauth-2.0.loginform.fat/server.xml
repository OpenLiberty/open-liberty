<server>
	<featureManager>
		<feature>oauth-2.0</feature>
		<feature>servlet-3.1</feature>
		<feature>ssl-1.0</feature>
		<feature>securitylibertyinternals-1.0</feature>
	</featureManager>

	<jspEngine keepGenerated="true" />

	<basicRegistry
		id="basic"
		realm="BasicRealm"
	>
		<user
			name="testuser"
			password="testuserpwd" />
		<user
			name="user1"
			password="user1pwd" />
		<user
			name="user2"
			password="user2pwd" />
	</basicRegistry>

	<include location="${server.config.dir}/imports/goodSSLSettings.xml" />

	<include location="../fatTestPorts.xml" />

	<oauth-roles>
		<authenticated>
			<user name="testuser" />
			<group name="group1" />
		</authenticated>
		<clientManager>
			<user name="testuser" />
			<group name="group1" />
		</clientManager>
	</oauth-roles>

	<oauthProvider
		id="OAuthConfigSample"
		filter="request-url%=snoop;request-url!=snooping"
		oauthOnly="true"
		customLoginURL="https://localhost:${bvt.prop.HTTP_default.secure}/oauthclient/customLogin.jsp"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>client02</autoAuthorizeClient>
		<autoAuthorizeClient>client03</autoAuthorizeClient>
		<autoAuthorizeClient>client04</autoAuthorizeClient>
		<autoAuthorizeClient>user1</autoAuthorizeClient>

		<localStore>
			<client
				name="client01"
				secret="{xor}LDo8LTor"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="client02"
				secret="{xor}LDo8LTor"
				displayname="client02"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="client03"
				secret="{xor}LDo8LTor"
				displayname="client03"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="client04"
				secret="{xor}LDo8LTor"
				displayname="client04"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="user1"
				secret="{xor}LDo8Ki02KyY="
				displayname="user1"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true"
			>
			</client>
		</localStore>
	</oauthProvider>

	<oauthProvider
		id="OAuthConfigTai"
		filter="request-url%=snooping"
		oauthOnly="true"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>client02</autoAuthorizeClient>
		<autoAuthorizeClient>user1</autoAuthorizeClient>
		<localStore>
			<client
				name="client01"
				secret="{xor}LDo8LTor"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
		</localStore>
	</oauthProvider>

	<oauthProvider
		id="OAuthConfigPublic"
		allowPublicClients="true"
		filter="request-url%=sniffing"
	>
		<autoAuthorizeClient>pclient01</autoAuthorizeClient>
		<autoAuthorizeClient>pclient02</autoAuthorizeClient>
		<autoAuthorizeClient>pclient03</autoAuthorizeClient>
		<autoAuthorizeClient>pclient04</autoAuthorizeClient>
		<autoAuthorizeClient>user2</autoAuthorizeClient>
		<localStore>
			<client
				name="pclient01"
				secret="{xor}LDo8LTor"
				displayname="pclient01"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="pclient02"
				secret="{xor}LDo8LTor"
				displayname="pclient02"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="pclient03"
				secret="{xor}LDo8LTor"
				displayname="pclient03"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="pclient04"
				secret="{xor}LDo8LTor"
				displayname="pclient04"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
			<client
				name="user2"
				secret="{xor}LDo8Ki02KyY="
				displayname="user2"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
		</localStore>
	</oauthProvider>

	<oauthProvider id="OAuthConfigNoFilter">
		<autoAuthorizeClient>nclient01</autoAuthorizeClient>
		<localStore>
			<client
				name="nclient01"
				secret="{xor}LDo8LTor"
				displayname="nclient01"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
		</localStore>
	</oauthProvider>

	<oauthProvider
		id="OAuthMediatorProvider"
		filter="request-url%=snorking"
		oauthOnly="true"
		libraryRef="testLib"
		mediatorClassname="com.ibm.ws.security.oauth20.fat.TestMediator"
	>
		<autoAuthorizeClient>mediatorclient</autoAuthorizeClient>
		<localStore>
			<client
				name="mediatorclient"
				secret="{xor}LDo8LTor"
				displayname="mediatorclient"
				redirect="http://localhost:${bvt.prop.HTTP_default}/oauthclient/redirect.jsp"
				enabled="true" />
		</localStore>
	</oauthProvider>

	<webAppSecurity
		httpOnlyCookies="false"
		allowFailOverToBasicAuth="true" />

	<httpSession cookieHttpOnly="false" />

	<library id="testLib">
		<fileset
			dir="${server.config.dir}"
			includes="testLib.jar" />
	</library>
	<!-- <library id="blah_blah_blah"> <fileset dir="${server.config.dir}" includes="testLib_1.jar"/> 
		</library> -->

	<include location="${server.config.dir}/imports/java2Permissions.xml" />

</server>
