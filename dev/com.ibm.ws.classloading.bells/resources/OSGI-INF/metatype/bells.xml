        ibm:type="pid"
        ibm:reference="com.ibm.ws.classloading.sharedlibrary" />

    <AD id="library.target" name="internal" description="internal use only"
        type="String" required="true" default="(service.pid=${libraryRef})"
        ibm:final="true" />

    <AD id="service" name="%service.name" description="%service.name.desc"
        type="String" required="false" cardinality="2147483647" />

    <AD id="serviceProperties" name="%service.properties" description="%service.properties.desc"
        type="String" required="false"
        ibm:type="pid"
        ibm:reference="com.ibm.ws.classloading.bell.serviceProperties"
        ibm:flat="true"
        ibm:beta="true" />
