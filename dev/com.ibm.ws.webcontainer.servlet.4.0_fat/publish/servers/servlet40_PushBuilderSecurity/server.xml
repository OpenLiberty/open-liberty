<server description="Server for testing PushBuilder">

  <include location="../fatTestPorts.xml"/>

  <featureManager>
    <feature>servlet-4.0</feature>
    <feature>ssl-1.0</feature>
    <feature>appSecurity-2.0</feature>
  </featureManager>
  
  <!-- Automatically expand WAR files and EAR files -->
  <applicationManager autoExpand="true"/>
  
  <keyStore id="defaultKeyStore" password="{xor}EzY9Oi0rJg==" /> <!-- pwd: Liberty, expires 1/4/2099 -->
      
  <basicRegistry id="basic" realm="WebRealm">
  	<user name="admin" password="adminpass" />
  </basicRegistry>
  
  <application type="war" id="TestPushBuilderSecurity.war" name="TestPushBuilderSecurity" location="${server.config.dir}/apps/TestPushBuilderSecurity.war">
    <application-bnd>
        <security-role name="ADMIN_ROLE">
            <user name="admin" />
        </security-role>
        <security-role name="AllAuthenticated">
            <special-subject type="ALL_AUTHENTICATED_USERS" />
        </security-role>
    </application-bnd>
  </application>

  <logging
    traceSpecification="*=info=enabled:com.ibm.ws.webcontainer*=all:com.ibm.wsspi.webcontainer*=all:HttpTransport=all:HTTPChannel=all:TCPChannel=all:GenericBNF=all:com.ibm.ws.jsp*=all:com.ibm.ws.session.*=all:com.ibm.ws.runtime.update.internal*=all:ChannelFramework=all"
    maxFileSize="20"
    maxFiles="10"
    traceFormat="BASIC"/>

</server>