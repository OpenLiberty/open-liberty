<server>
    <featureManager>
        <feature>enterpriseBeansLite-4.0</feature>
        <feature>persistenceContainer-3.2</feature>
        <feature>servlet-6.1</feature>
        <feature>xmlBinding-4.0</feature>
        <feature>componenttest-2.0</feature>
    </featureManager>

    <jpa defaultPersistenceProvider="org.hibernate.jpa.HibernatePersistenceProvider" />

    <library id="HibernateLib">
        <fileset dir="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate" includes="*.jar"/>
    </library>

    <!-- Java 2 Security issue with ANTLR: https://github.com/antlr/antlr4/issues/3720 -->
    <javaPermission className="java.lang.RuntimePermission" name="getenv.TURN_OFF_LR_LOOP_ENTRY_BRANCH_OPT"/>

    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/antlr4-runtime-4.9.1.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/byte-buddy-1.12.8.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/classmate-1.5.1.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/hibernate-commons-annotations-6.0.0.Final.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/hibernate-core-6.0.0.Final.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/jandex-2.4.2.Final.jar" className="java.security.AllPermission"/>
    <javaPermission codebase="${shared.resource.dir}/jpa_entity_fat_jpa31_hibernate/jboss-logging-3.4.3.Final.jar" className="java.security.AllPermission"/>
</server>