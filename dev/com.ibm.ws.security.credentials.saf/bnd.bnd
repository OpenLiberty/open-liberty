-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.1

Bundle-Name: WebSphere SAF Credentials Service
Bundle-SymbolicName: com.ibm.ws.security.credentials.saf
Bundle-Description: WebSphere SAF Credentials Service; version=${bVersion}

# The lazy activation policy ends up (somehow) causing 185649.
# The issue is that the SAFCredentialsService is activated while DS is
# in the process of binding SAFRegistryFactory to UserRegistryServiceImpl.
# Since SAFRegistryFactory has an optional/static/greedy dependency on
# SAFCredentialsService, DS tries to deactivate/reactivate SAFRegistryFactory
# in order to inject the new SAFCredentialsService.  However, since DS is
# currently in the process of binding SAFRegistryFactory to UserRegistryServiceImpl,
# it holds up the deactivation, waiting for the bind to complete.  The bind
# is happening on the same thread, however, so the thread essentially becomes
# deadlocked on itself, until a 5-second wait timer pops, after which DS goes
# ahead and deactivates SAFRegistryFactory.  Eventually everthing gets sorted out
# and the right services get activated/injected, but not before DS issues several
# error msgs ("CWWKE0701E: Timeout waiting for reg change to complete").
# Disabling the lazy-activation policy seems to resolve the issue.
# Bundle-ActivationPolicy: lazy

WS-TraceGroup: Credentials

Export-Package: \
    com.ibm.ws.security.saf;provide:=true, \
    com.ibm.ws.security.credentials.saf;provide:=true, \
    com.ibm.wsspi.security.credentials.saf;provide:=true

Private-Package: \
    com.ibm.ws.security.credentials.saf.internal.*

Include-Resource: \
    OSGI-INF=resources/OSGI-INF

IBM-Default-Config: OSGI-INF/wlp/defaultInstances.xml

-dsannotations: com.ibm.ws.security.credentials.saf.internal.SAFCredentialsServiceImpl

-metatypeannotations: com.ibm.ws.security.credentials.saf.internal.SAFCredentialsConfig

-buildpath: \
	com.ibm.websphere.appserver.spi.logging;version=latest,\
	com.ibm.websphere.org.osgi.core;version=latest,\
	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
	com.ibm.wsspi.org.osgi.service.metatype.annotations;version=latest,\
	com.ibm.ws.security.token;version=latest,\
	com.ibm.ws.bnd.annotations;version=latest,\
	com.ibm.ws.security;version=latest,\
	com.ibm.ws.security.authentication;version=latest,\
	com.ibm.ws.security.credentials;version=latest,\
	com.ibm.websphere.security;version=latest,\
	com.ibm.ws.security.registry;version=latest,\
	com.ibm.ws.zos.core;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest

instrument.classesExcludes: com/ibm/ws/security/credentials/saf/internal/resources/SAFMessages*.class

-testpath: \
	../build.sharedResources/lib/junit/old/junit.jar;version=file, \
	cglib:cglib-nodep;version=3.3.0, \
	com.ibm.ws.org.objenesis:objenesis;version=1.0, \
	com.ibm.ws.junit.extensions;version=latest, \
	com.ibm.ws.kernel.boot;version=latest, \
	com.ibm.ws.logging;version=latest, \
	org.hamcrest:hamcrest-all;version=1.3, \
	org.jmock:jmock-junit4;strategy=exact;version=2.5.1, \
	org.jmock:jmock;strategy=exact;version=2.5.1, \
	org.jmock:jmock-legacy;version=2.5.0
	