<server>

	<samlWebSso20
		id="sp50"
		authFilterRef="myAuthFilte50"
		wantAssertionsSigned="true"
		signatureMethodAlgorithm="SHA1"
		authnRequestsSigned="true"
		forceAuthn="false"
		isPassive="false"
		idpMetadata="${server.config.dir}/imports/${tfimIdpServer}/Fed6MetaData.xml"
		keyStoreRef="samlKeyStore"
		keyAlias="sslspservercert"
		trustStoreRef="serverStore"
		clockSkew="300s"
		tokenReplayTimeout="30m"
		includeTokenInSubject="true"
		mapToUserRegistry="No"
		nameIDFormat="unspecified"
	>
	</samlWebSso20>

	<!-- userIdentifier="" groupIdentifier="" userUniqueIdentifier="subjectUniqueId" 
		realmIdentifier="" -->

	<authFilter id="myAuthFilter50">
		<requestUrl
			id="myRequestUrl"
			urlPattern="/samlclient/fat/sp50/"
			matchType="contains" />
	</authFilter>

</server>    
