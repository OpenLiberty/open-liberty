<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>
    <container qualifier="websphere" default="true">
        <!-- This arquillian.xml file can pick up the <systemPropertyVariables> 
            that are set in the pom.xml that launches the tests...and the pom.xml picks 
            out the "-D...." environment variables that are set in the java that launches 
            the mvn via a ProcessBuilder cmd. -->
        <configuration>
            <property name="wlpHome">${wlp}</property>
            <property name="serverName">${tck_server}</property>
            <property name="httpPort">${tck_port}</property>
            <property name="allowConnectingToRunningServer">true</property>
            <property name="appDeployTimeout">60</property>
            <property name="verifyAppDeployTimeout">60</property>
            <property name="failSafeUndeployment">${tck_failSafeUndeployment}</property>
            <property name="appUndeployTimeout">${tck_appUndeployTimeout}</property>
            <!-- com.ibm.tools.attach.enable=yes is for using the localConnector-1.0 feature on zOS -->
            <!-- jdk.attach.allowAttachSelf is to allow late self-attach on JDK 11+ -->
            <property name="javaVmArguments">-Dcom.ibm.tools.attach.enable=yes -Djdk.attach.allowAttachSelf=true</property>
        </configuration>
    </container>
</arquillian>
