-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 21
javac.target: 21

Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=21))"

Bundle-Name: Virtual Thread Impl
Bundle-SymbolicName: io.openliberty.threading.virtual.internal
Bundle-Description: Virtual Thread Impl for Java 21; version=${bVersion}

WS-TraceGroup: threading

instrument.classesExcludes: io/openliberty/threading/virtual/internal/resources/*.class

publish.wlp.jar.disabled: true

-buildpath: \
	com.ibm.websphere.appserver.spi.logging;version=latest,\
	com.ibm.websphere.org.osgi.core;version=latest,\
 	com.ibm.websphere.org.osgi.service.component;version=latest,\
 	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
 	com.ibm.ws.kernel.service;version=latest,\
 	com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
	io.openliberty.threading.virtual;version=latest
