<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         metadata-complete="false" version="3.1">
  <display-name>EJB31JCDIBean</display-name>
  <enterprise-beans>

    <session>
      <ejb-name>BeanManagerStatelessXML</ejb-name>
      <resource-env-ref>
        <resource-env-ref-name>BeanManager</resource-env-ref-name>
        <resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
        <injection-target>
          <injection-target-class>com.ibm.ws.ejbcontainer.cdi.jcdi.ejb.BeanManagerStatelessXMLBean</injection-target-class>
          <injection-target-name>ivBeanManager</injection-target-name>
        </injection-target>
      </resource-env-ref>
    </session>

    <session>
      <ejb-name>SimpleStatefulTran</ejb-name>
      <ejb-class>com.ibm.ws.ejbcontainer.cdi.jcdi.ejb.SimpleStatefulBean</ejb-class>
      <env-entry>
        <env-entry-name>EJBName</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>SimpleStatefulTran</env-entry-value>
        <injection-target>
          <injection-target-class>com.ibm.ws.ejbcontainer.cdi.jcdi.ejb.SimpleStatefulBean</injection-target-class>
          <injection-target-name>ivEJBName</injection-target-name>
        </injection-target>
      </env-entry>
    </session>

  </enterprise-beans>
 </ejb-jar>