-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-SymbolicName: io.openliberty.restfulWS.internal.logging.filter

# Only publish the Jakarta one
publish.wlp.jar.include: io.openliberty.restfulWS.internal.logging.filter.jakarta.jar

app-resources= \
  META-INF/services/javax.ws.rs.ext.Providers

Service-Component: \
  io.openliberty.restfulWS.internal.logging.filter.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=optional; \
    properties:="resources=${app-resources}"

#-cdiannotations:

-dsannotations:

-dsannotations-inherit: true

Export-Package: \
  io.openliberty.restfulWS.internal.logging.filter;thread-context=true



Include-Resource:\
  io/openliberty=${bin}/io/openliberty, \
  META-INF=resources/META-INF

-buildpath: \
  com.ibm.websphere.javaee.jaxrs.2.1, \
  com.ibm.ws.logging.core, \
  com.ibm.ws.org.osgi.annotation.versioning;version=latest

jakartaeeMe: true
