-include= ~../cnf/resources/bnd/rejar.props

bVersion=1.0

javac.source: 1.8
javac.target: 1.8

Bundle-SymbolicName: io.openliberty.io.smallrye.openapi.core; singleton:=true

WS-TraceGroup: MPOPENAPI

Require-Capability: osgi.ee;filter:="(&(osgi.ee=JavaSE)(version=1.8))"

src: src

-dsannotations-inherit: true

Include-Resource: \
    META-INF/services=resources/META-INF/services

Import-Package: \
    io.smallrye.openapi.jaxrs,\
    *

Export-Package: \
    io.smallrye.openapi.*;version=2.0.0

Service-Component: \
    io.smallrye.openapi.runtime.scanner.spi.AnnotationScanner; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=optional; \
    properties:="resources=META-INF/services/io.smallrye.openapi.runtime.scanner.spi.AnnotationScanner"
  
-buildpath: \
    io.smallrye:smallrye-open-api-core;strategy=exact;version=2.1.0.SNAPSHOT-20200817,\
    io.openliberty.org.eclipse.microprofile.openapi.2.0;version=latest,\
    com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
    com.ibm.ws.logging;version=latest,\
    com.ibm.websphere.javaee.validation.2.0;version=latest,\
    com.ibm.websphere.org.osgi.service.component;version=latest
