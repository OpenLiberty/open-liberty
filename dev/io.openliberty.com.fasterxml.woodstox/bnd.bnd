-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 11
javac.target: 11

Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=11))"

Bundle-SymbolicName: io.openliberty.com.fasterxml.woodstox

woodstox-version: 6.2.4
stax2-version: 4.2

Export-Package: \
  org.codehaus.stax2.*;version=${woodstox-version}, \
  com.ctc.wstx.*;version=${stax2-version}

app-resources= \
  META-INF/services/javax.xml.stream.XMLEventFactory | \
  META-INF/services/javax.xml.stream.XMLInputFactory | \
  META-INF/services/javax.xml.stream.XMLOutputFactory

Service-Component: \
  io.openliberty.com.fasterxml.woodstox.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=ignore; \
    properties:= "resources=${app-resources}"
  
-buildpath: \
  com.fasterxml.woodstox:woodstox-core;version=${woodstox-version};strategy=exact, \
  org.codehaus.woodstox:stax2-api;version=${stax2-version};strategy=exact
