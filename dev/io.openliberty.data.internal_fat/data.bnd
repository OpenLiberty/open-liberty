-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0.0

Bundle-Name: Experimentation with ideas for Jakarta Data
Bundle-SymbolicName: test.jakarta.data; singleton:=true
Bundle-Description: Experimentation with ideas for Jakarta Data; version=${bVersion}

Export-Package: \
  io.openliberty.data;version="1.0.0"

# TODO: these CDI package imports can be removed when JEE9 compatibility is no longer required
Import-Package: \
 jakarta.enterprise.event;version="[3.0,5)",\
 jakarta.enterprise.inject.spi;version="[3.0,5)",\
 *

Private-Package: \
  io.openliberty.data.internal.*,\
  io.openliberty.data.internal.cdi.*

-cdiannotations:

-dsannotations: \
  io.openliberty.data.internal.DataPersistence,\
  io.openliberty.data.internal.cdi.DataExtensionMetadata
