<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	id="WebApp_ID" version="2.4">
	<display-name>OpenID Connect Endpoint Servlet</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<description>OpenID Connect Endpoint Servlet</description>
		<display-name>OpenID Connect Endpoint Servlet</display-name>
		<servlet-name>OpenIdConnectEndpointServlet</servlet-name>
		<servlet-class>com.ibm.ws.security.openidconnect.web.OidcEndpointServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OpenIdConnectEndpointServlet</servlet-name>
		<url-pattern>/endpoint/*</url-pattern>
		<url-pattern>/providers/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OpenIdConnectEndpointServlet</servlet-name>
		<url-pattern>/declarativeEndpoint/*</url-pattern>
	</servlet-mapping>
	<servlet>
		<description>Public Facing Error Servlet</description>
		<display-name>PublicFacingErrorServlet</display-name>
		<servlet-name>PublicFacingErrorServlet</servlet-name>
		<servlet-class>com.ibm.ws.security.oauth20.web.PublicFacingErrorServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PublicFacingErrorServlet</servlet-name>
		<url-pattern>/publicError</url-pattern>
	</servlet-mapping>

	<filter>
		<display-name>OpenID Connect Request Filter</display-name>
		<filter-name>OidcRequestFilter</filter-name>
		<filter-class>com.ibm.ws.security.openidconnect.web.OidcRequestFilter</filter-class>
	</filter>
	<filter>
    	<display-name>Static resource cache Filter</display-name>
    	<filter-name>StaticResourceCacheFilter</filter-name>
    	<filter-class>com.ibm.ws.security.oauth20.web.StaticResourceCacheFilter</filter-class>
    </filter>
	<filter-mapping>
		<filter-name>OidcRequestFilter</filter-name>
		<servlet-name>OpenIdConnectEndpointServlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <url-pattern>/scripts/*</url-pattern>
    </filter-mapping>

	<security-role>
		<role-name>authenticated</role-name>
	</security-role>
    <security-role>
		<role-name>clientManager</role-name>
	</security-role>
    <security-role>
		<role-name>tokenManager</role-name>
	</security-role>		
 
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>OAuth2 login page</web-resource-name>
			<url-pattern>/login.jsp</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>OAuth2 Endpoint</web-resource-name>
			<url-pattern>/declarativeEndpoint/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>authenticated</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login.jsp?error=error</form-error-page>
		</form-login-config>
	</login-config>
	<error-page>
		<error-code>404</error-code>
		<location>/publicError</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/publicError</location>
	</error-page>
</web-app>
