<?xml version="1.0" encoding="UTF-8"?>
<project name="com.ibm.ws.messaging.comms_fat" default="buildandrun" basedir=".">
	<import file="../ant_build/public_imports/fat_imports.xml" />
    

	<target name="addAutoInstallApplications" description="Automatically Install applications on LibertyServer instance creation">
	
		<mkdir dir="${basedir}/publish/servers/com.ibm.ws.messaging.comms.client/dropins"/>
		<mkdir dir="${basedir}/publish/servers/com.ibm.ws.messaging.comms.WJO.Client/dropins"/>
		<echo message="create apps" />
		<copy file="${basedir}/publish/files/CommsLP.zip" tofile="${basedir}/publish/servers/com.ibm.ws.messaging.comms.client/dropins/CommsLP.war"/>
		<copy file="${basedir}/publish/files/CommsLP.zip" tofile="${basedir}/publish/servers/com.ibm.ws.messaging.comms.WJO.Client/dropins/CommsLP.war"/>
	</target>

</project>
