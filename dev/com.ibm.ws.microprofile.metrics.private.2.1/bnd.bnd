-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 1.8
javac.target: 1.8

Bundle-Name: MicroProfile Metrics Private REST API 2.1
Bundle-SymbolicName: com.ibm.ws.microprofile.metrics.private.2.1

Bundle-Description: MicroProfile Metrics 2.1 Private REST API, version ${bVersion}

IBM-Authorization-Roles: com.ibm.ws.management
IBM-Web-Extension-Processing-Disabled: true

Web-ContextPath: @privateMetricsURL
OL-VirtualHost: ${admin.virtual.host}

Import-Package: \
	org.eclipse.microprofile.metrics;version="[1.0,3)",\
	org.eclipse.microprofile.metrics.*;version="[1.0,3)",\
	*

Private-Package: \
	com.ibm.ws.microprofile.metrics.privateapi,\
	com.ibm.ws.microprofile.metrics.privateapi.resources

Include-Resource: \
	WEB-INF=resources/WEB-INF

Require-Capability: osgi.ee;filter:="(&(osgi.ee=JavaSE)(version=1.8))"

-dsannotations-inherit: true
-dsannotations: com.ibm.ws.microprofile.metrics.privateapi.PrivateMetricsRESTHandler21

WS-TraceGroup: METRICS

-buildpath: \
	com.ibm.websphere.javaee.servlet.3.1;version=latest,\
	com.ibm.websphere.org.eclipse.microprofile.metrics.2.1;version=latest,\
	com.ibm.websphere.rest.handler;version=latest,\
	com.ibm.ws.logging;version=latest,\
	com.ibm.ws.microprofile.metrics.2.0;version=latest,\
	com.ibm.ws.microprofile.metrics.2.1;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
	com.ibm.wsspi.org.osgi.service.component;version=latest,\
	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest
