<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
    
    <persistence-unit name="JPQL_JTA">
        <jta-data-source>jdbc/JPA_DS</jta-data-source>
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <class>com.ibm.ws.jpa.query.jpql.model.SimpleJPQLEntity</class>
        <properties>
            <property name="eclipselink.logging.parameters" value="true"/>
        	<property name="eclipselink.cache.shared.default" value="false"/>
        	
        	<property name="eclipselink.session.customizer" value="com.ibm.ws.jpa.query.sqlcapture.eclipselink.ECLSessionCustomizer"/>
        </properties>
    </persistence-unit>
    
    <persistence-unit name="JPQL_RL" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <class>com.ibm.ws.jpa.query.jpql.model.SimpleJPQLEntity</class>
        <properties>
            <property name="eclipselink.logging.parameters" value="true"/>
        	<property name="eclipselink.cache.shared.default" value="false"/>
        	
        	<property name="eclipselink.session.customizer" value="com.ibm.ws.jpa.query.sqlcapture.eclipselink.ECLSessionCustomizer"/>
        </properties>
    </persistence-unit>    
    
</persistence>