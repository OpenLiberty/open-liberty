<server>
	<featureManager>
		<!-- Feature being tested -->
		<feature>validation-3.1</feature>

		<!-- Feature integrations being tested -->
		<feature>cdi-4.1</feature>
		<feature>jndi-1.0</feature>
		<feature>enterpriseBeans-4.0</feature>

		<!-- User feature to make Hibernate Validator public -->
		<feature>valThirdParty-3.1</feature>

		<!-- Needed by test infrastructure -->
		<feature>timedexit-1.0</feature>

		<!-- Feature needed for arquillan support -->
		<feature>localConnector-1.0</feature>

		<!-- Protocol used by Arquillian -->
		<feature>servlet-6.1</feature>

		<!-- Optional feature for better arquillian support -->
		<feature>arquillian-support-jakarta-2.1</feature>

	</featureManager>

	<include location="../fatTestPorts.xml" />

	<!-- Allow Arquillian to monitor application -->
	<applicationMonitor updateTrigger="mbean" />
	<keyStore id="defaultKeyStore" password="libertyPassword" />

	<!-- Allow Arquillian access to dropins directory for application installation -->
	<remoteFileAccess>
		<writeDir>${server.config.dir}/dropins</writeDir>
	</remoteFileAccess>


	<!--Java2 security -->
	<javaPermission className="java.security.AllPermission"
		name="*" actions="*" />

</server>
