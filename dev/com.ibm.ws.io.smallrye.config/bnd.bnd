-include= ~../cnf/resources/bnd/rejar.props

bVersion=1.0

javac.source: 1.8
javac.target: 1.8

Bundle-SymbolicName: com.ibm.ws.io.smallrye.config; singleton:=true

WS-TraceGroup: APPCONFIG

Require-Capability: osgi.ee;filter:="(&(osgi.ee=JavaSE)(version=1.8))"

src: src

-dsannotations-inherit: true
-dsannotations: com.ibm.ws.microprofile.config.smallrye.OLSmallRyeConfigProviderResolver, \
  com.ibm.ws.microprofile.config.smallrye.OLSmallRyeConfigExtension

Service-Component: \
 com.ibm.ws.microprofile.config.smallrye.deserializationClassProvider;\
    implementation:=com.ibm.ws.serialization.DeserializationClassProvider;\
    provide:=com.ibm.ws.serialization.DeserializationClassProvider;\
    properties:="service.vendor=IBM,\
      packages=io.smallrye.config\
        |io.smallrye.config.inject\
        |io.smallrye.config.common\
        |io.smallrye.config.common.utils"

Include-Resource: \
  META-INF=resources/META-INF

Import-Package: \
  javax.enterprise.*; version="[1.1,3)",\
  *

Private-Package: \
  com.ibm.ws.microprofile.config.smallrye, \
  io.smallrye.config.*

-buildpath: \
  io.smallrye.config:smallrye-config;strategy=exact;version=1.6.1, \
  io.smallrye.config:smallrye-config-common;strategy=exact;version=1.6.1, \
  com.ibm.websphere.javaee.cdi.1.2;version=latest, \
  com.ibm.websphere.javaee.annotation.1.2;version=latest, \
  com.ibm.websphere.org.eclipse.microprofile.config.1.4;version=latest, \
  com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
  com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
  com.ibm.ws.cdi.interfaces;version=latest,\
  com.ibm.websphere.org.osgi.service.component;version=latest
