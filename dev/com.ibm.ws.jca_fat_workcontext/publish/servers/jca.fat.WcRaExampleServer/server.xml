<server description="WcRaExampleServer">
<!-- <include location="../fatTestPorts.xml"/> -->
  <featureManager>
    <feature>mdb-4.0</feature>
    <!--  JCA cannot beloaded at the same time as mdb  -->
    <!--  <feature>jca-1.7</feature> -->
    <feature>servlet-6.0</feature>
    <feature>osgiconsole-1.0</feature>
    <feature>connectors-2.1</feature>
    <feature>componenttest-2.0</feature>
    <!-- added causes timedexit error -->
    <!-- <feature>threadingTestFeature-1.0</feature> -->
  </featureManager>

   <!-- <include location="../fatTestPorts.xml"/>  -->
   <include optional="true" location="../fatTestPorts.xml"/>
  <variable name="onError" value="FAIL"/>

  <connectionFactory jndiName="eis/conFactory">
    <properties.WorkContextJCAppRA tableName="TABLE1"/>
  </connectionFactory>

  <adminObject jndiName="eis/conSpec">
    <properties.WorkContextJCAppRA.ConnectionSpec/>
  </adminObject>

  <adminObject jndiName="eis/iSpec_ADD">
    <properties.WorkContextJCAppRA.InteractionSpec functionName="ADD"/>
  </adminObject>

  <adminObject jndiName="eis/iSpec_FIND">
    <properties.WorkContextJCAppRA.InteractionSpec functionName="FIND"/>
  </adminObject>

  <adminObject jndiName="eis/iSpec_REMOVE">
    <properties.WorkContextJCAppRA.InteractionSpec functionName="REMOVE"/>
  </adminObject>

  <activationSpec id="ExampleApp/ExampleMessageDrivenBean">
    <properties.WorkContextJCAppRA functionName="ADD"/>
  </activationSpec>

</server>
