-include=~../cnf/resources/bnd/bundle.props

-sub: *.bnd

bVersion=1.0
cxfImportVersion=3.5.5
cxfExportVersion=3.4.3

Export-Package: \
  org.apache.cxf.transport.http;version=${cxfExportVersion}, \
  org.apache.cxf.transport.http.auth;version=${cxfExportVersion}, \
  org.apache.cxf.transport.http.osgi;version=${cxfExportVersion}, \
  org.apache.cxf.transport.https;version=${cxfExportVersion}, \
  org.apache.cxf.transport.servlet;version=${cxfExportVersion}, \
  org.apache.cxf.transports.http;version=${cxfExportVersion}, \
  org.apache.cxf.transports.http.configuration;version=${cxfExportVersion}, \
  com.ibm.ws.cxf.exceptions;version=${cxfExportVersion}

Import-Package: \
  !java.*, \
  !org.apache.aries.*, \
  !org.springframework.*, \
  javax.wsdl.*;resolution:=optional, \
  org.apache.cxf.ws.policy.*;resolution:=optional, \
  org.apache.cxf.wsdl;resolution:=optional, \
  !org.osgi.service.blueprint.*, \
  javax.servlet.*;resolution:=optional;version="[2.6.0,3.0.0)", \
  com.ibm.ws.cxf.jaxrs21.client.*;version="[3.2,4)", \
  *

Service-Component: \
  com.ibm.ws.org.apache.cxf.cxf.rt.transports.http.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=optional; \
    properties:="resources=META-INF/cxf/bus-extensions.txt"

-includeresource: \
  @${repo;org.apache.cxf:cxf-rt-transports-http;${cxfImportVersion};EXACT}!/!META-INF/*, \
  org/apache/cxf=${bin}/org/apache/cxf, \
  META-INF=resources/META-INF

-buildpath: \
  org.apache.cxf:cxf-rt-transports-http;strategy=exact;version=${cxfImportVersion}, \
  com.ibm.ws.org.apache.cxf.cxf.core.3.2;version=latest, \
  com.ibm.websphere.javaee.servlet.4.0;version=latest, \
  com.ibm.ws.logging.core, \
  com.ibm.ws.org.osgi.annotation.versioning;version=latest, \
  com.ibm.wsspi.org.osgi.core, \
  javax.activation:activation;version=1.1
