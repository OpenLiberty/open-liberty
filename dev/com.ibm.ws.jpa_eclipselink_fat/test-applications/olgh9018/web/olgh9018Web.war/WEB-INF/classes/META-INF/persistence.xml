<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

    <persistence-unit name="OLGH9018_JTA">
        <jta-data-source>jdbc/JPA_DS</jta-data-source>
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <properties>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.cache.shared.default" value="false"/>

            <!-- Setting this property should force EclipseLink to maintain an exclusive connection 
            for the lifetime of the owning EntityManager and perform all writes and reads through 
            the exclusive connection -->
            <property name="eclipselink.jdbc.exclusive-connection.mode" value="Always"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="OLGH9018_RL" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <properties>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.cache.shared.default" value="false"/>

            <!-- Setting this property should force EclipseLink to maintain an exclusive connection 
            for the lifetime of the owning EntityManager and perform all writes and reads through 
            the exclusive connection -->
            <property name="eclipselink.jdbc.exclusive-connection.mode" value="Always"/>
        </properties>
    </persistence-unit>
</persistence>