<persistence 
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

    <!-- Persistence Units for testing Force Bind Parameters -->
    <persistence-unit name="OLGH8294_PROPERTY_JTA">
        <jta-data-source>jdbc/JPA_DS</jta-data-source>
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <properties>
            <!-- Testing that with this property set, EclipseLink will 
            force query parameters to be bound (?, ?)  -->
            <property name="eclipselink.jdbc.force-bind-parameters" value="true"/>

            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.cache.shared.default" value="false"/>

            <property name="eclipselink.session.customizer" value="com.ibm.ws.jpa.query.sqlcapture.eclipselink.ECLSessionCustomizer"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="OLGH8294_PROPERTY_RL" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <properties>
            <!-- Testing that with this property set, EclipseLink will 
            force query parameters to be bound (?, ?)  -->
            <property name="eclipselink.jdbc.force-bind-parameters" value="true"/>

            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.cache.shared.default" value="false"/>

            <property name="eclipselink.session.customizer" value="com.ibm.ws.jpa.query.sqlcapture.eclipselink.ECLSessionCustomizer"/>
        </properties>
    </persistence-unit>
</persistence>