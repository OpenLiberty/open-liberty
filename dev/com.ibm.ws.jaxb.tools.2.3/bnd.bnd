-include= ~../cnf/resources/bnd/bundle.props

bVersion=1.0.${libertyBundleMicroVersion}
bSymbolicName=com.ibm.ws.jaxb.tools.2.3

Bundle-Name: com.ibm.ws.jaxb.tools.2.3
Bundle-SymbolicName: com.ibm.ws.jaxb.tools.2.3; singleton:=true

# The SPI definition under META-INF/services
# Do not publish RI javax.xml.bind.JAXBContext
app-resources= \
  META-INF/services/com.sun.tools.xjc.Plugin |\
  META-INF/services/org.relaxng.datatype.DatatypeLibraryFactory | \
  META-INF/services/org.iso_relax.verifier.VerifierFactoryLoader

Service-Component: \
  com.ibm.ws.jaxb.tools_2_3_${replace;${bVersion};\\.;_}.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=ignore; \
    properties:= "resources=${app-resources}"

Import-Package: \
  javax.activation,\
  javax.xml.bind.*; version="[2.3,3)", \
  com.ibm.wsspi.classloading, \
  org.apache.xml.*; resolution:=optional, \
  !org.apache.tools*, \
  !org.apache.xerces*, \
  !org.jvnet*, \
  !com.sun.mirror.*, \
  !com.sun.xml.bind.*, \
  !com.sun.source.tree.*, \
  !com.sun.source.util.*, \
  !com.sun.xml.fastinfoset.sax.*, \
  !com.sun.xml.fastinfoset.stax.*, \
  !sun.nio.cs*, \
  !com.sun.org.apache.xml.internal.resolver, \
  !com.sun.org.apache.xml.internal.resolver.tools, \
  *

Export-Package: \
  com.sun.xml.bind*;version="2.3.0.1";thread-context=true

Include-Resource: \
  @${repo;com.sun.xml.bind:jaxb-core;2.3.0.1}!/!META-INF/maven/*, \
  @${repo;com.sun.xml.bind:jaxb-impl;2.3.0.1}!/!META-INF/maven/*, \
  @${repo;com.sun.xml.bind:jaxb-xjc;2.3.0.1}!/!META-INF/maven/*, \
  @${repo;com.sun.xml.bind:jaxb-jxc;2.3.0.1}!/!META-INF/maven/*

Private-Package:\
  com.ibm.ws.jaxb.tools.*

instrument.disabled: true

-buildpath: \
	com.sun.xml.bind:jaxb-core;version=2.3.0.1,\
	com.sun.xml.bind:jaxb-impl;version=2.3.0.1,\
	com.sun.xml.bind:jaxb-xjc;version=2.3.0.1,\
	com.sun.xml.bind:jaxb-jxc;version=2.3.0.1,\
	com.ibm.ws.org.apache.ant;version=latest
