<server>

	<basicRegistry id="basic" realm="BasicRealm">
		<user name="testuser" password="testuserpwd" />
		<user name="diffuser" password="diffuserpwd" />
		<user name="user1" password="security" />
		<user name="user2" password="security" />
		<user name="user3" password="user3pwd" />
		<user name="user4" password="user4pwd" />
		<user name="noTokensUser" password="noTokensUserpwd" />
		<user name="maxAppTokenUser" password="maxAppTokenUserpwd" />
		<user name="tokenmgr" password="tokenmgrpwd" />
		<user name="tokenmgrg1" password="tokenmgrg1pwd" />
		<user name="clientmgr" password="clientmgrpwd" />

		<group name="managers">
			<member name="tokenmgrg1" />
			<user name="user2" />
		</group>
	</basicRegistry>

	<!-- keyStore id="defaultKeyStore" password="keyspass" / -->

	<authorization-roles
		id="com.ibm.ws.security.oidc10">
		<security-role name="authenticated">
			<user name="testuser" />
			<user name="diffuser" />
			<user name="clientmgr" />
			<user name="user1" />
			<user name="user2" />
			<user name="user3" />
			<user name="maxAppTokenUser" />
		</security-role>
		<security-role name="clientManager">
			<user name="testuser" />
			<user name="clientmgr" />
			<user name="diffuser" />
			<user name="user1" />
			<user name="user2" />
			<user name="user3" />
			<user name="maxAppTokenUser" />
		</security-role>
	</authorization-roles>

	<oauth-roles>
		<authenticated>
			<user name="testuser" />
			<user name="diffuser" />
			<user name="clientmgr" />
			<user name="user1" />
			<user name="user2" />
			<user name="user3" />
			<user name="maxAppTokenUser" />
			<user name="noTokensUser" />
		</authenticated>
		<clientManager>
			<user name="testuser" />
			<user name="diffuser" />
			<user name="user1" />
			<user name="user2" />
			<user name="user3" />
			<user name="maxAppTokenUser" />
			<group name="clientmgr" />
		</clientManager>
		<tokenManager>
			<user name="tokenmgr" />
			<group name="managers" />
		</tokenManager>
	</oauth-roles>

</server>

