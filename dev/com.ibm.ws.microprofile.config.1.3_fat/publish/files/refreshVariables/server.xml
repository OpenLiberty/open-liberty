<server description="Server for testing variable Config">

	<include location="../fatTestPorts.xml" />

	<featureManager>
		<feature>osgiconsole-1.0</feature>
		<feature>cdi-2.0</feature>
		<feature>servlet-4.0</feature>
		<feature>componentTest-1.0</feature>
		<feature>mpConfig-1.3</feature>
	</featureManager>

    <variable name="string_variable" value="string_value"/>
    <variable name="int_variable" value="999"/>
    <variable name="bool_variable" value="true"/>
    <variable name="multi_string_variable" value="first,second,third"/>
    <variable name="changeable_variable" value="updated_value" />
    <variable name="serverXMLKey1" value="valueinServerXMLVariable1" />
    <variable name="serverXMLKey2" value="valueinServerXMLVariable2" />    
   	
   	<application location="variableServerXMLApp.war">
   		<appProperties>
   		       <property name="serverXMLKey1" value="valueinAppProperties1"/>
   		       <property name="serverXMLKey3" value="valueinAppProperties3"/>
   		       <property name="serverXMLKey4" value="valueinAppProperties4"/>
   		       <property name="serverXMLChangeableKey" value="originalvalueinAppProperties"/>
   		</appProperties>
	</application>
	
    <variable name="serverXMLKey3" value="valueinServerXMLVariable3" />
    
    <logging trace.specification="*=info:APPCONFIG=all" />    
</server>
