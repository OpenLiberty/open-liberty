<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application-client PUBLIC "-//Sun Microsystems, Inc.//DTD J2EE Application Client 1.2//EN"  "http://java.sun.com/j2ee/dtds/application-client_1_2.dtd">
<application-client id="Application-client_ID">
	<display-name>ClientHandler</display-name>
	<service-ref>
		<service-ref-name>services/HelloFromResource</service-ref-name>
		<service-interface>
			com.ibm.ws.jaxws.test.wsr.clienthandler.ClientSayHelloService
		</service-interface>
		<handler-chains>
			<handler-chain>
				<handler>
					<handler-name>SOAPHandler</handler-name>
					<handler-class>com.ibm.ws.jaxws.test.wsr.clienthandler.TestSOAPHandler</handler-class>
					<init-param>
						<param-name>soapArg0</param-name>
						<param-value>testPortInitParamInSoapFromRes</param-value>
					</init-param>
				</handler>
				<handler>
					<handler-name>LogicalHandler</handler-name>
					<handler-class>com.ibm.ws.jaxws.test.wsr.clienthandler.TestLogicalHandler</handler-class>
					<init-param>
						<param-name>arg0</param-name>
						<param-value>testPortInitParamFromRes</param-value>
					</init-param>
				</handler>
			</handler-chain>
		</handler-chains>
	</service-ref>
	<!--Using @WebServiceRef to inject the WebService -->
	<service-ref>
		<service-ref-name>services/HelloFromWSRef</service-ref-name>
		<service-interface>
			com.ibm.ws.jaxws.test.wsr.clienthandler.ClientSayHelloService
		</service-interface>
		<handler-chains>
			<handler-chain>
				<handler>
					<handler-name>SOAPHandler</handler-name>
					<handler-class>com.ibm.ws.jaxws.test.wsr.clienthandler.TestSOAPHandler</handler-class>
					<init-param>
						<param-name>soapArg0</param-name>
						<param-value>testServiceInitParamInSoapFromWSRef</param-value>
					</init-param>
				</handler>
				<handler>
					<handler-name>LogicalHandler</handler-name>
					<handler-class>com.ibm.ws.jaxws.test.wsr.clienthandler.TestLogicalHandler</handler-class>
					<init-param>
						<param-name>arg0</param-name>
						<param-value>testServiceInitParamFromWSRef</param-value>
					</init-param>
				</handler>
			</handler-chain>
		</handler-chains>
	</service-ref>
</application-client>
