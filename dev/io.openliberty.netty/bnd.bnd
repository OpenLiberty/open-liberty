-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-Name: io.openliberty.netty
Bundle-SymbolicName: io.openliberty.netty; singleton:=true
Bundle-Description: At the moment, provides the implementation
of WsByteBuffer version ${bVersion}

WS-TraceGroup: Netty

IBM-Default-Config: OSGI-INF/wlp/defaultInstances.xml

# For each exported package, create (in that package) a package-info.java
# file, and place an @version javadoc tag in package-level javadoc. 
# Append ";provide:=true" if this bundle also provides an implementation
# for the exported API.
Export-Package: \
	io.openliberty.netty*; version=1.0; provide:=true, \
	com.ibm.wsspi.bytebuffer; version=1.0; provide:=true; -split-package:=merge-first
	
Private-Package: \
	com.ibm.ws.bytebuffer.internal, \
	com.ibm.ws.bytebuffer.internal.resources
	
Include-Resource: \
    OSGI-INF=resources/OSGI-INF

-dsannotations: \
   io.openliberty.netty.osgi.Bundle, \
   com.ibm.ws.bytebuffer.internal.ByteBufferConfiguration

#   com.ibm.ws.channelfw.CHFWEventHandler; \
Service-Component: \
    io.openliberty.netty.EventHandler; \
        implementation:=io.openliberty.netty.internal.OsgiEventHandler; \
        configuration-policy:=ignore;\
        provide:=com.ibm.websphere.event.EventHandler; \
        properties:="event.topics=io.openliberty/netty/*,service.vendor=IBM"
 
instrument.disabled: true

-buildpath: \
	com.ibm.ws.logging,\
	com.ibm.ws.event,\
	com.ibm.websphere.org.osgi.core,\
	com.ibm.websphere.org.osgi.service.component,\
	com.ibm.wsspi.org.osgi.service.component.annotations,\
	com.ibm.ws.kernel.feature,\
	com.ibm.ws.kernel.service;version=latest,\
	com.ibm.ws.timer;version=latest,\
	com.ibm.ws.kernel.security.thread,\
	com.ibm.ws.kernel.boot.core;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
	io.netty.buffer;version=latest,\
	io.netty.common;version=latest
#  <property name="unittest.prop.com.ibm.ws.logging.exception.log.enabled" value="false" />
#  file /dev/com.ibm.ws.channelfw/unittestports.properties

-testpath: \
	org.hamcrest:hamcrest-all;version='1.3',\
	org.jmock:jmock-junit4;strategy=exact;version='2.5.1',\
	org.jmock:jmock;strategy=exact;version='2.5.1',\
	../build.sharedResources/lib/junit/old/junit.jar;version=file,\
	com.ibm.ws.junit.extensions;version=latest,\
	com.ibm.ws.org.objenesis:objenesis;version='1.0',\
	cglib:cglib-nodep;version='3.3.0',\
	org.jmock:jmock-legacy;version='2.5.0',\
	com.ibm.ws.kernel.boot;version=latest,\
	io.netty.buffer;version=latest,\
	io.netty.common;version=latest,\
	io.netty.common;version='4.1.59'
