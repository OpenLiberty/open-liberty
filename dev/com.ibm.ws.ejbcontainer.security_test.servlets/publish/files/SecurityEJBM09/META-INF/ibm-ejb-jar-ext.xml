	version="1.0">

	<session name="SecurityEJBM09Bean">
		<run-as-mode mode="CALLER_IDENTITY">
		    <method type="LOCAL" name="denyAll" params="" />
		    <method type="LOCAL" name="denyAll" params="java.lang.String" />
		</run-as-mode>
		
		<run-as-mode mode="SPECIFIED_IDENTITY">
			<specified-identity role="Employee" />
			<method type="LOCAL" name="employee" params="" />
		</run-as-mode>
		
		<run-as-mode mode="CALLER_IDENTITY">
			<method type="LOCAL" name="employee" params="java.lang.String" />
		</run-as-mode>
		
		<run-as-mode mode="SPECIFIED_IDENTITY">
			<specified-identity role="Manager" />
			<method type="LOCAL" name="manager" params="" />
		</run-as-mode>
		
		<run-as-mode mode="CALLER_IDENTITY">
			<method type="LOCAL" name="manager" params="java.lang.String" />
		</run-as-mode>
		
		<run-as-mode mode="CALLER_IDENTITY">
			<method type="LOCAL" name="employeeAndManager" params="" />
		</run-as-mode>
		<run-as-mode mode="SPECIFIED_IDENTITY">
			<specified-identity role="DeclaredRole01" />
			<method type="LOCAL" name="employeeAndManager" params="java.lang.String,java.lang.String" />
		</run-as-mode>
		<run-as-mode mode="SYSTEM_IDENTITY">
			<method type="LOCAL" name="employeeAndManager" params="int" />
