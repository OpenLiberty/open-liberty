-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-SymbolicName: io.openliberty.org.jboss.resteasy.validator.provider

src: src

app-resources= \
  META-INF/services/javax.ws.rs.ext.Providers
  
-cdiannotations:

Service-Component: \
  io.openliberty.org.jboss.resteasy.validator.provider.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=optional; \
    properties:="resources=${app-resources}"    

Export-Package: \
  org.jboss.resteasy.plugins.validation;version=4.5.8.Final;thread-context=true, \
  org.jboss.resteasy.plugins.validation.i18n;version=4.5.8.Final

# Using version=! in order to not have a version attached to the import for packages that were removed
# from Java after Java 8.  Doing this keeps the import like before Java 11 support. It will get the
# packages from Java when using Java 8 or earlier and from the new shipped bundles for Java 9 and later.
Import-Package: \
  org.jboss.resteasy.api.validation, \
  jakarta.persistence,\
  *

Include-Resource:\
@${repo;org.jboss.resteasy:resteasy-validator-provider;4.5.8.Final;EXACT}, \
org/jboss/resteasy=${bin}/org/jboss/resteasy

-buildpath: \
	org.jboss.resteasy:resteasy-cdi;strategy=exact;version=4.5.8.Final,\
	org.jboss.resteasy:resteasy-validator-provider;strategy=exact;version=4.5.8.Final,\
	com.ibm.websphere.javaee.validation.2.0;version=latest,\
	com.ibm.ws.cdi.interfaces;version=latest,\
	com.ibm.websphere.javaee.cdi.2.0,\
	com.ibm.websphere.javaee.jaxrs.2.1,\
	com.ibm.ws.logging.core,\
	com.ibm.ws.org.jboss.logging,\
	io.openliberty.org.jboss.resteasy.common,\
	com.ibm.ws.com.fasterxml.classmate;version=latest
 
jakartaeeMe: true

instrument.ffdc: false
