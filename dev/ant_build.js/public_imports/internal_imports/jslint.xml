<project name="jslint">

  <!-- For jslint docs, see http://docs.jslint4java.googlecode.com/git/2.0.1/ant.html or com.ibm.ws.ui_tools/jslint4java-2.0.4/docs -->
  <target name="jslint_internal" >
    <condition property="haltOnFailure" value="${haltOnFailure}" else="false" >
      <isset property="${haltOnFailure}" />
    </condition>
    
    <condition property="scan.dir" value="${scan.dir}" else="resources" >
      <isset property="${scan.dir}" />
    </condition>
    
    <condition property="scan.file.types" value="${scan.file.types}" else="**/*.js">
      <isset property="${scan.file.types}" />
    </condition>
    
    <condition property="formatter.type" value="${formatter.type}" else="junit">
      <isset property="${formatter.type}" />
    </condition>
    
    <condition property="formatter.destfile" value="${formatter.destfile}" else="build/reports/jslint/">
      <isset property="${formatter.destfile}" />
    </condition>

    <taskdef name="jslint"
             classname="com.googlecode.jslint4java.ant.JSLintTask"
             classpath="${basedir}/../ant_build.js/lib/jslint4java-2.0.4/jslint4java-2.0.4.jar" />

    <jslint encoding="UTF-8" haltOnFailure="${haltOnFailure}" options="browser,devel">
      <formatter type="${formatter.type}" destfile="${formatter.destfile}"/>
      <fileset dir="${scan.dir}" includes="${scan.file.types}"/>
    </jslint>
  </target>

  <!-- For jslint docs, see http://docs.jslint4java.googlecode.com/git/2.0.1/ant.html or com.ibm.ws.ui_tools/jslint4java-2.0.4/docs -->
  <target name="jslint" >
  	<antcall target="jslint_internal" >
  	  <param name="scan.dir" value="${basedir}/resources/WEB-CONTENT/js" />
      <param name="scan.file.types" value="**/*.js" />
  	</antcall>
  </target>

</project>
