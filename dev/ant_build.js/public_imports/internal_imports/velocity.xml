<project name="velocity" default="get-velocity-lib">
    
    <property name="velocity.project.destination" location="${basedir}/lib/velocity" />
    <property name="velocity.version" value="1.4.2" />
    <property name="velocity.home" location="${basedir}/../ant_build.js/lib/velocity" />
    
    <!-- Common 'velocity build' process-->
    <target name="get-velocity-lib">
        <echo>Getting velocity!</echo>
        <echo>velocity.project.destination: ${velocity.project.destination}</echo>
        <echo>velocity.home: ${velocity.home}</echo>
        <delete dir="${velocity.project.destination}" failonerror="false" />
        <mkdir dir="${velocity.project.destination}" />
        <copy file="${velocity.home}/velocity-${velocity.version}/velocity.min.js" tofile="${velocity.project.destination}/velocity.min.js" />
    </target>
</project>