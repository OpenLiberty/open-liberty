<project name="orion" default="get-orion-lib">
    
    <property name="orion.project.destination" location="${basedir}/lib/orion" />
    <property name="orion.version" value="14.0" />
    <property name="orion.home" location="${basedir}/../ant_build.js/lib/orion/codeEdit-${orion.version}" />
    
    <!-- Common 'orion build' process-->
    <target name="get-orion-lib">
        <echo>Getting orion!</echo>
        <echo>orion.project.destination: ${orion.project.destination}</echo>
        <echo>orion.home: ${orion.home}</echo>
        <delete dir="${orion.project.destination}" failonerror="false" />
        <mkdir dir="${orion.project.destination}" />
        <copy todir="${orion.project.destination}">
            <fileset dir="${orion.home}">
                <include name="**" />
                <!-- ServerConfig doesn't leverage AMD so we don't need it.  Also don't copy over unminified files -->
                <exclude name="**/code_edit/built-codeEdit-amd.js" />
                <exclude name="**/code_edit/built-codeEdit-amd.min.js" />
                <exclude name="**/code_edit/built-codeEdit.js" />
            	<exclude name="**/others/**/jslintPlugin*" />
            </fileset>
        </copy>
    </target>
</project>