<?xml version="1.0" encoding="UTF-8"?>
<!-- Configure the web services for the respectbinding deployment descriptor
     service side tests. 
     
     Normally this file is optional, but since we are testing deployment
     descriptors, this is where we put them for the WAR container.      
-->    

<!-- need v1.3 for this stuff to work  -->
<webservices version="1.3" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/javaee_web_services_1_3.xsd">	

	<webservice-description>
	  <!-- the name can be used for jndi lookup, although we won't be doing that -->
	  <webservice-description-name>Echo</webservice-description-name>
	  <wsdl-file>WEB-INF/wsdl/EchoService.wsdl</wsdl-file>
	  
		<port-component>		  
		  			

			
			<port-component-name>EchoPort</port-component-name>
			<wsdl-port xmlns:my="http://server.respectbinding.jaxws22/">my:EchoPort</wsdl-port>
            
			<respect-binding>
				<enabled>true</enabled>
			</respect-binding>
			<service-impl-bean>
			    <!-- this maps to an entry in web.xml, which in turn maps to a class --> 
				<servlet-link>EchoPort</servlet-link>
			</service-impl-bean>
		

		</port-component>
	</webservice-description>	

    <!-- We could add more webservices here if we had them.  
       Since we have some apps that are not supposed to deploy, combining them
       into a single ear could keep the whole ear from deploying. For that reason
       we put each service in a separate ear.
    -->

</webservices>
