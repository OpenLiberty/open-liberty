<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>SAML Token Client</display-name>

    <servlet id="servlet_1">
        <servlet-name>samlcxfclient</servlet-name>
        <display-name>samlcxfclient</display-name>
        <description>CXF Username token Service Client</description>
        <servlet-class>com.ibm.ws.wssecurity.fat.samlcxfclient.CxfSamlSvcClient</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping id="ServletMapping_1">
        <servlet-name>samlcxfclient</servlet-name>
        <url-pattern>/CxfSamlSvcClient</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
 
   <security-constraint id="SecurityConstraint_1">
     <web-resource-collection id="WebResourceCollection_1">
        <web-resource-name>Protected with Employee or Manager roles</web-resource-name>
        <url-pattern>/CxfSamlSvcClient</url-pattern>
        <http-method>GET</http-method>
        <http-method>POST</http-method>
     </web-resource-collection>
     <auth-constraint id="AuthConstraint_2">
        <role-name>Employee</role-name>
        <role-name>Manager</role-name>  
     </auth-constraint>
  </security-constraint>
     
      <!-- CHALLENGE TYPE -->
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Test Realm</realm-name>
    <form-login-config id="FormLoginConfig_1">
        <form-login-page>/login.jsp</form-login-page>
        <form-error-page>/loginError.jsp</form-error-page>
    </form-login-config>
  </login-config>

  <!-- ROLES DEFINITION -->
  <security-role id="SecurityRole_1">
     <description>Employee role</description>
     <role-name>Employee</role-name>
  </security-role>       
  <security-role id="SecurityRole_2">
     <description>Manager role</description>
     <role-name>Manager</role-name>
  </security-role>
  <security-role id="SecurityRole_3">
     <description>AllAuthenticated role</description>
     <role-name>AllAuthenticated</role-name>
  </security-role>
</web-app>

