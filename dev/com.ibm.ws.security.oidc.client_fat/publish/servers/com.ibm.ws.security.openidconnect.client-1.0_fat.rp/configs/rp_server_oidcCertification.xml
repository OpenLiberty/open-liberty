<server>

    <featureManager>
        <feature>openidConnectClient-1.0</feature>
        <feature>ssl-1.0</feature>
    </featureManager>

    <include location="${server.config.dir}/imports/goodBasicRegistry.xml"/>
    <include location="${server.config.dir}/imports/goodSSLSettings.xml"/>
    <include location="${server.config.dir}/imports/formlogin_1.xml"/>
    <include location="${server.config.dir}/imports/rp_fatTestPorts.xml"/>

    <openidConnectClient
        id="client01"
        clientId="${oidc.certification.clientId}"
        clientSecret="${oidc.certification.clientSecret}"
        scope="${oidc.certification.scope}"
        authorizationEndpointUrl="${oidc.certification.authorizationEndpoint}"
        tokenEndpointUrl="${oidc.certification.tokenEndpoint}"
        userInfoEndpointUrl="${oidc.certification.userInfoEndpoint}"
        userInfoEndpointEnabled="${oidc.certification.userInfoEndpointEnabled}"
        jwkEndpointUrl="${oidc.certification.jwksUri}"
        signatureAlgorithm="${oidc.certification.signatureAlgorithm}"
        tokenEndpointAuthMethod="${oidc.certification.tokenEndpointAuthMethod}"
        nonceEnabled="true"
    >
    </openidConnectClient>

</server>
