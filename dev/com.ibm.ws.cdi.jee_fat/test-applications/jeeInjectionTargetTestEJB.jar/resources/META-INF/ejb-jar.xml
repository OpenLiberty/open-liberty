<?xml version="1.0"?>

<ejb-jar
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
  version="3.1"
>
  <enterprise-beans>

    <session>
      <ejb-name>MySessionBean1</ejb-name>

      <env-entry>
        <env-entry-name>greeting</env-entry-name>
        <env-entry-type>java.lang.Integer</env-entry-type>
        <env-entry-value>2345</env-entry-value>
      </env-entry>
    </session>

    <session>
      <ejb-name>MySessionBean2</ejb-name>

      <env-entry>
        <env-entry-name>greeting</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>hello</env-entry-value>
      </env-entry>
    </session>
  </enterprise-beans>
  
  <interceptors>	
  	<interceptor>
  		<interceptor-class>cdi12.helloworld.jeeResources.ejb.interceptors.MyEJBJARXMLDefinedInterceptor</interceptor-class>
  	</interceptor>	
  </interceptors>
  
  <assembly-descriptor>
 	 <interceptor-binding>
     	<ejb-name>MyEJBDefinedInXml</ejb-name>
     	<interceptor-class>cdi12.helloworld.jeeResources.ejb.interceptors.MyEJBJARXMLDefinedInterceptor</interceptor-class>
     </interceptor-binding>
  </assembly-descriptor>
</ejb-jar>


