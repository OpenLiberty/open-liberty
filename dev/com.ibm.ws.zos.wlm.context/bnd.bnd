-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-Name: z/OS WLM context service
Bundle-SymbolicName: com.ibm.ws.zos.wlm.context
Bundle-Description: z/OS WLM context service; version=${bVersion}

WS-TraceGroup: zOSWLMContext

Private-Package: com.ibm.ws.zos.wlm.context.internal

Include-Resource: \
  OSGI-INF=resources/OSGI-INF

Service-Component: \
  com.ibm.ws.zos.wlm.context.provider; \
    implementation:=com.ibm.ws.zos.wlm.context.internal.WLMContextProviderImpl; \
    provide:='com.ibm.wsspi.threadcontext.ThreadContextProvider'; \
    eEVersion='com.ibm.ws.javaee.version.JavaEEVersion'; \
    wlmEnclaveManager=com.ibm.ws.zos.wlm.EnclaveManager; \
    nativeUtils=com.ibm.ws.zos.core.utils.NativeUtils; \
    configuration-policy:=ignore; \
    dynamic:='eEVersion';\
    greedy:='eEVersion';\
    optional:='eEVersion'

-buildpath: \
	com.ibm.ws.context;version=latest,\
	com.ibm.ws.container.service;version=latest,\
	com.ibm.ws.javaee.version;version=latest,\
	com.ibm.ws.logging;version=latest,\
	com.ibm.ws.zos.wlm;version=latest,\
	com.ibm.ws.zos.core;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
    com.ibm.websphere.org.osgi.core;version=latest

-testpath: \
	../build.sharedResources/lib/junit/old/junit.jar;version=file,\
	com.ibm.ws.junit.extensions;version=latest,\
	org.hamcrest:hamcrest-all;version=1.3,\
	org.jmock:jmock-junit4;strategy=exact;version=2.5.1,\
	org.jmock:jmock;strategy=exact;version=2.5.1,\
	com.ibm.websphere.org.osgi.core;version=latest,\
	com.ibm.websphere.org.osgi.service.component;version=latest,\
	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
	com.ibm.websphere.javaee.concurrent.1.0;version=latest,\
	com.ibm.ws.zos.request.logging.data;version=latest
