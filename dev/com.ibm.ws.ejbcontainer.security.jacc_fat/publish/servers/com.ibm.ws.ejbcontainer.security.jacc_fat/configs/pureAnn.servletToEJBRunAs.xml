<server description="EJB security FAT configuration">

	<featureManager>
		<feature>servlet-3.1</feature>
	        <feature>ejbLite-3.2</feature>
		<feature>appSecurity-2.0</feature>
		<feature>usr:jaccTestProvider-1.0</feature>
	</featureManager>
	
	<ejbContainer startEJBsAtAppStart="true"/>
	
	<jaccTestProvider roleMappingFile="${server.config.dir}/resources/security/roleMapping.props" />

	<basicRegistry id="basic" realm="BasicRealm">
		<user name="user0" password="user0pwd" />
		<user name="user1" password="user1pwd" />
		<group name="group1">
		    <member name="user0" />
			<member name="user1" />
		</group>
		<user name="user2" password="user2pwd" />
		<group name="group2">
			<member name="user6" />
		</group>
		<user name="user3" password="user3pwd" />
		<group name="group3">
			<member name="user3" />
		</group>
		<user name="user4" password="user4 pwd" />
		<group name="group4">
			<member name="user4" />
		</group>
		<user name="user5" password="user5pwd " />
		<group name="group5">
			<member name="user5" />
		</group>
		<user name="user6" password="user6pwd" /> 
		<user name="user98" password="user98pwd" /> 
		<user name="user99" password="user99pwd" />              		
	</basicRegistry>


	    <application type="ear" id="securityejb" name="securityejb" location="securityejb.ear">
		<application-bnd>
			<security-role name="Employee">
				<run-as userid="user99" />
			</security-role>	
			<security-role name="Manager">
			    <run-as userid="user98" password="user98pwd"/>
			</security-role>
		</application-bnd>
	    </application>
	
		    <application type="ear" id="securityejbinwar" name="securityejbinwar" location="securityejbinwar.ear">
		<application-bnd>
			<security-role name="Employee">
				<run-as userid="user99" />
			</security-role>	
			<security-role name="Manager">
			    <run-as userid="user98" password="user98pwd"/>
			</security-role>
			<security-role name="AllAuthenticated">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
		</application-bnd>
	    </application>
	    
	    <application type="war" id="securityejbstandalonewar" name="securityejbstandalonewar" location="ejbinstandalone.war">
		<application-bnd>
			<security-role name="Employee">
				<run-as userid="user99" />
			</security-role>	
			<security-role name="Manager">
			    <run-as userid="user98" password="user98pwd"/>
			</security-role>
		</application-bnd>
	    </application>
	

	<include location="../fatTestPorts.xml"/>

</server>
