<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- This is a simple flow definition.  The flow ID, start node, and some exit nodes are defined. -->
    <flow-definition id="initializeFinalize">
        <view id="initializeFinalize">
            <vdl-document>/initializeFinalize/initializeFinalize.xhtml</vdl-document>
        </view>
        <flow-return id="goIndex">
            <from-outcome>/JSF22Flows_index</from-outcome>
        </flow-return>
        <flow-return id="goReturn">
            <from-outcome>/JSF22Flows_return</from-outcome>
        </flow-return>

        <!-- Define the initializer and finalizer to test.  These methods should be called
          at flow init and end -->
        <initializer>
           #{testBeanInitFinalize.testInitialize()}
        </initializer>
        <finalizer>
            #{testBeanInitFinalize.testFinalize()}
        </finalizer>
    </flow-definition>
</faces-config>
