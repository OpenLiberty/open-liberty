<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<navigation-rule>
        <from-view-id>/testViewActionNavigation.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{numberBean.checkNumber}</from-action>
            <if>#{numberBean.invalidNumber}</if>
            <to-view-id>/testViewActionNavigation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
	
	<lifecycle>
		<phase-listener>com.ibm.ws.fat.jsf.viewAction.phaseListener.AnyPhaseListener</phase-listener>
		<phase-listener>com.ibm.ws.fat.jsf.viewAction.phaseListener.RestoreViewPhaseListener</phase-listener>
		<phase-listener>com.ibm.ws.fat.jsf.viewAction.phaseListener.RenderResponsePhaseListener</phase-listener>
	</lifecycle>
	
</faces-config>
