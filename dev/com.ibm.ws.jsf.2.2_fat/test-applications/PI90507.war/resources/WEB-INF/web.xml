<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
	version="3.1">
	
  <display-name>PI90507</display-name>
  
  <servlet>
    <display-name>FacesServlet</display-name>
    <servlet-name>FacesServlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>FacesServlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>

  <!-- By enabling this context parameter, pre destroy won't be called on Facelet Action Listeners.
  	   This prevents a list of injected JSF artifacts to grow  -->
  <context-param>
    <param-name>com.ibm.ws.jsf.DisableFaceletActionListenerPreDestroy</param-name>
    <param-value>true</param-value>
  </context-param>
</web-app>