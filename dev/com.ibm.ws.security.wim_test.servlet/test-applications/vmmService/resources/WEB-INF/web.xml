<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app id="VmmServiceServlet">
  <display-name>VMM Service Servlet</display-name>
  <description>This is a servlet designed to Call VMM APIs using VMMService.</description>

  <!-- SERVLET DEFINITIONS -->
  <servlet id="Default">
    <servlet-name>VmmServiceServlet</servlet-name>
    <display-name>VMM Service Servlet</display-name>
    <description>This is a servlet designed to Call VMM APIs using VMMService.</description>
    <servlet-class>web.VmmServiceServlet</servlet-class>
    <load-on-startup></load-on-startup>
  </servlet>

  <!-- SERVLET MAPPINGS -->        
  <servlet-mapping id="ServletMapping_Default">
    <servlet-name>VmmServiceServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
