<server>

	<include location="imports/spnego/serversettings/standard_config.xml"/>
	<include location="imports/spnego/configs/spnego_myauthfilter.xml"/>

	<authFilter id="myAuthFilter" >
		<requestUrl id="myURL" urlPattern="/SimpleServlet" matchType="contains"/>
		<host id="myHost" name="myhost.kdcdomain.com" matchType="notContain"/>
		<userAgent id="myAgent" agent="IE" matchType="equals" />
		<requestHeader id="myNameNoValue" name="nameNoValue" matchType="notContain"/>
 	</authFilter>

</server>