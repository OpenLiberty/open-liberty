<server>

	<featureManager>
		<feature>servlet-3.1</feature> <!-- Required for EE9 transform. -->
		<feature>ssl-1.0</feature>
		<feature>securitylibertyinternals-1.0</feature>
		<feature>openidConnectServer-1.0</feature>
	</featureManager>

	<basicRegistry
		id="basic"
		realm="BasicRealm"
	>
		<user
			name="testuser"
			password="testuserpwd" />
		<user
			name="user1"
			password="user1pwd" />
		<user
			name="client01"
			password="secret" />
		<user
			name="user2"
			password="user2pwd" />
		<group name="group1">
			<member name="user1" />
		</group>
	</basicRegistry>

	<keyStore
		id="defaultKeyStore"
		password="keyspass" />

	<authorization-roles id="com.ibm.ws.security.oidc10">
		<security-role name="authenticated">
			<user name="testuser" />
			<group name="group1" />
		</security-role>
		<security-role name="clientManager">
			<user name="testuser" />
			<group name="group1" />
		</security-role>
	</authorization-roles>

	<oauth-roles>
		<authenticated>
			<user name="testuser" />
			<group name="group1" />
		</authenticated>
		<clientManager>
			<user name="testuser" />
			<group name="group1" />
		</clientManager>
	</oauth-roles>

	<include location="${server.config.dir}/imports/fatTestPorts.xml" />

	<webAppSecurity
		httpOnlyCookies="false"
		allowFailOverToBasicAuth="true"
		ssoRequiresSSL="true" />

	<httpSession
		cookieHttpOnly="false"
		cookieSecure="true" />

	<openidConnectProvider
		id="OidcConfigSample"
		oauthProviderRef="OAuthConfigSample"
		jwkEnabled="${oidcJWKEnabled}"
		signatureAlgorithm="${oidcSignAlg}" />
	<oauthProvider
		id="OAuthConfigSample"
		filter="request-url%=snoop;request-url!=snooping"
		oauthOnly="true"
		jwtAccessToken="${oidcCreateJWTToken}"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>client02</autoAuthorizeClient>
		<autoAuthorizeClient>client03</autoAuthorizeClient>
		<autoAuthorizeClient>client04</autoAuthorizeClient>
		<autoAuthorizeClient>user1</autoAuthorizeClient>

		<localStore>
			<client
				name="client01"
				secret="{xor}LDo8LTor"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="openid scope1 scope2"
				functionalUserId="funcid"
				functionalUserGroupIds = "funcgroup"
				preAuthorizedScope="openid scope1 scope2"
				enabled="true" />
			<client
				name="client02"
				secret="{xor}LDo8LTor"
				displayname="client02"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="client03"
				secret="{xor}LDo8LTor"
				displayname="client03"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="client04"
				secret="{xor}LDo8LTor"
				displayname="client04"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="user1"
				secret="{xor}LDo8Ki02KyY="
				displayname="user1"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true"
			>
			</client>
		</localStore>
	</oauthProvider>

	<oauthProvider
		id="OAuthConfigTai"
		filter="request-url%=snooping"
		oauthOnly="true"
		jwtAccessToken="${oidcCreateJWTToken}"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>client02</autoAuthorizeClient>
		<autoAuthorizeClient>user1</autoAuthorizeClient>
		<localStore>
			<client
				name="client01"
				secret="{xor}LDo8LTor"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
		</localStore>
	</oauthProvider>

	<javaPermission
		className="java.net.SocketPermission"
		name="*"
		actions="connect,resolve" />

</server>
