<server>
	<featureManager>
		<feature>oauth-2.0</feature>
		<feature>ssl-1.0</feature>
		<feature>securitylibertyinternals-1.0</feature>
	</featureManager>

	<config monitorInterval="100ms" />

	<basicRegistry
		id="basic"
		realm="BasicRealm"
	>
		<user
			name="testuser"
			password="testuserpwd" />
		<user
			name="user1"
			password="user1pwd" />
		<user
			name="user2"
			password="user2pwd" />
	</basicRegistry>

	<keyStore
		id="defaultKeyStore"
		password="keyspass" />

	<oauth-roles>
		<authenticated>
			<user name="testuser" />
			<group name="group1" />
		</authenticated>
		<clientManager>
			<user name="testuser" />
			<group name="group1" />
		</clientManager>
	</oauth-roles>

	<include location="${server.config.dir}/imports/fatTestPorts.xml" />

	<logging suppressSensitiveTrace="true" />

	<webAppSecurity
		httpOnlyCookies="false"
		allowFailOverToBasicAuth="true" />

	<httpSession
		cookieHttpOnly="false"
		cookieSecure="true" />

	<oauthProvider
		id="OAuthConfigSample"
		filter="request-url%=snoop;request-url!=snooping"
		oauthOnly="true"
		jwtAccessToken="${oidcCreateJWTToken}"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>client02</autoAuthorizeClient>
		<autoAuthorizeClient>client03</autoAuthorizeClient>
		<autoAuthorizeClient>client04</autoAuthorizeClient>
		<autoAuthorizeClient>user1</autoAuthorizeClient>

		<localStore>
			<client
				name="client01"
				secret="{xor}LGw8LWwr"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="client02"
				secret="{xor}LGw8LWwr"
				displayname="client02"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="client03"
				secret="{xor}LGw8LWwr"
				displayname="client03"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="client04"
				secret="{xor}LGw8LWwr"
				displayname="client04"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
			<client
				name="user1"
				secret="{xor}LDo8Ki02KyY="
				displayname="user1"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true"
			>
			</client>
		</localStore>
	</oauthProvider>


	<oauthProvider
		id="OAuthConfigTai"
		filter="request-url%=snooping"
		oauthOnly="true"
		jwtAccessToken="${oidcCreateJWTToken}"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>client02</autoAuthorizeClient>
		<autoAuthorizeClient>user1</autoAuthorizeClient>
		<localStore>
			<client
				name="client01"
				secret="{xor}LGw8LWwr"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.security_1_HTTP_default}/oauthclient/redirect.jsp"
				scope="ALL_SCOPES"
				enabled="true" />
		</localStore>
	</oauthProvider>

</server>
