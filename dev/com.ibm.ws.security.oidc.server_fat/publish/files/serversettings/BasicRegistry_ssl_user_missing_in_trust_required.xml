<server>

	<basicRegistry
		id="basic"
		realm="BasicRealm"
	>
		<user
			name="testuser"
			password="testuserpwd" />
		<user
			name="diffuser"
			password="diffuserpwd" />
		<user
			name="user1"
			password="user1pwd" />
		<user
			name="LDAPUser1"
			password="LDAPUser1pwd" />
		<user
			name="user2"
			password="user2pwd" />
	</basicRegistry>

	<sslDefault sslRef="DefaultSSLSettings" />
	<ssl
		id="DefaultSSLSettings"
		keyStoreRef="myKeyStore"
		trustStoreRef="myTrustStore"
		clientAuthentication="true"
		sslProtocol="TLSv1.2" /> <!-- we need the server to pass the "hint" back to the client for the test using this config TLSv1.3 no longer sends the hint -->
	<keyStore
		id="myKeyStore"
		password="Liberty"
		type="jks"
		location="${server.config.dir}/commonBasicKeyStore.jks" />
	<keyStore
		id="myTrustStore"
		password="Liberty"
		type="jks"
		location="${server.config.dir}/commonTrustStore.jks" />

	<authorization-roles id="com.ibm.ws.security.oidc10">
		<security-role name="authenticated">
			<user name="testuser" />
			<user name="user1" />
			<user name="LDAPUser1" />
			<user name="diffuser" />
			<group name="group1" />
		</security-role>
		<security-role name="clientManager">
			<user name="testuser" />
			<user name="user1" />
			<user name="LDAPUser1" />
			<user name="diffuser" />
			<group name="group1" />
		</security-role>
	</authorization-roles>

	<oauth-roles>
		<authenticated>
			<user name="testuser" />
			<user name="user1" />
			<user name="LDAPUser1" />
			<user name="diffuser" />
			<group name="group1" />
		</authenticated>
		<clientManager>
			<user name="testuser" />
			<user name="user1" />
			<user name="LDAPUser1" />
			<user name="diffuser" />
			<group name="group1" />
		</clientManager>
	</oauth-roles>

</server>
