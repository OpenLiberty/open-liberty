-include= ~../cnf/resources/bnd/bundle.props

bVersion=2.0


bSymbolicName=com.ibm.ws.jakarta.mail.2.0

Bundle-Name: Jakarta Mail 2.0 API
Bundle-SymbolicName: com.ibm.ws.jakarta.mail.2.0
Bundle-Description: Jakarta Mail 2.0 API; This feature allows applications to utilize the Jakarta Mail 2.0 API. 

WS-TraceGroup: Mail


## Resources that were moved from the original javax.mail.jar to
## the new feature jar, included the mailcap file which is needed
## for the app-resources header

Include-Resource: \
  @${repo;com.ibm.ws.com.sun.mail.jakarta.mail.2.0}!/META-INF/mailcap, \
  @${repo;com.ibm.ws.com.sun.mail.jakarta.mail.2.0}!/META-INF/gfprobe-provider.xml, \
  @${repo;com.ibm.ws.com.sun.mail.jakarta.mail.2.0}!/META-INF/javamail.charset.map, \
  @${repo;com.ibm.ws.com.sun.mail.jakarta.mail.2.0}!/META-INF/javamail.default.address.map, \
  @${repo;com.ibm.ws.com.sun.mail.jakarta.mail.2.0}!/META-INF/javamail.default.providers  

Service-Component: \
  com.ibm.ws.javamail_1_6_${replace;${bVersion};\\.;_}.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=ignore; \
    properties:= "resources=${app-resources}"

-dsannotations=com.ibm.ws.javamail.internal.MailSessionService, \
  com.ibm.ws.javamail.internal.injection.MailSessionDefinitionInjectionProcessorProvider, \
  com.ibm.ws.javamail.internal.injection.MailSessionResourceFactoryBuilder

## The only file that is used by the app-resources is the
## mailcap file, this is because it is used by JAF to assess
## what type of content the Message classes uses with its DataHandler
## I originally included the other files, but commented them out for now
## as I'm not entirely sure they are needed for the feature to work properly
app-resources= \
  META-INF/mailcap 

Private-Package: \
  com.ibm.ws.javamail.internal.injection, \
  com.ibm.ws.javamail.internal, \
  com.ibm.ws.javamail.resources, \
  com.ibm.ws.config.xml.internal.nester

Import-Package: \
  !*.internal.*, \
  *

Export-Package: \
  com.ibm.ws.jakarta.mail

instrument.classesExcludes: com/ibm/ws/jakarta/mail/resources/*.class

-buildpath: \
	com.ibm.websphere.appserver.spi.logging,\
	com.ibm.websphere.jakartaee.mail.2.0;version=latest,\
	com.ibm.ws.com.sun.mail.jakarta.mail.2.0;version=latest,\
	com.ibm.ws.javaee.dd.common;version=latest,\
	com.ibm.websphere.appserver.spi.kernel.service,\
	com.ibm.websphere.org.osgi.core,\
	com.ibm.websphere.org.osgi.service.component,\
	com.ibm.wsspi.org.osgi.service.component.annotations,\
	com.ibm.ws.injection.core;version=latest,\
	com.ibm.ws.container.service;version=latest,\
	com.ibm.ws.logging.core,\
	com.ibm.ws.resource;version=latest, \
	com.ibm.ws.config;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest
