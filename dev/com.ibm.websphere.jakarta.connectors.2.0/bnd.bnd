-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 1.8
javac.target: 1.8

Bundle-SymbolicName: com.ibm.websphere.jakarta.connectors.2.0; singleton:=true

Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=1.8))"

Export-Package: \
	jakarta.resource;version=2.0.0,\
	jakarta.resource.cci;version=2.0.0,\
	jakarta.resource.spi;version=2.0.0,\
	jakarta.resource.spi.endpoint;version=2.0.0,\
	jakarta.resource.spi.security;version=2.0.0,\
	jakarta.resource.spi.work;version=2.0.0

Include-Resource: \
  @${repo;jakarta.resource:jakarta.resource-api;2.0.0}!/META-INF/NOTICE

instrument.disabled: true

publish.wlp.jar.suffix: dev/api/spec

-buildpath: \
	jakarta.resource:jakarta.resource-api;version=2.0.0
