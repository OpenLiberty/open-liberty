<?xml version="1.0" encoding="UTF-8"?>
<web-app id="JASPIBasicAuthServlet" version="3.1" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">  

	<display-name>JavaEESecBasicAuthServlet</display-name>
	
	<!-- SERVLET DEFINITIONS -->
	<servlet>
		<display-name>CommonServlet</display-name>
		<servlet-name>CommonServlet</servlet-name>
		<servlet-class>web.war.servlets.CommonServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CommonServlet</servlet-name>
		<url-pattern>/CommonServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<display-name>UnprotectedServlet</display-name>
		<servlet-name>UnprotectedServlet</servlet-name>
		<servlet-class>web.war.servlets.UnprotectedServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UnprotectedServlet</servlet-name>
		<url-pattern>/UnprotectedServlet</url-pattern>
		<url-pattern>/UnprotectedServlet</url-pattern>
	</servlet-mapping>
	
	<!-- SECURITY CONSTRAINTS -->
	<security-constraint>
		<display-name>basic_auth</display-name>
		<web-resource-collection>
			<web-resource-name>basic_auth_servlet</web-resource-name>
			<url-pattern>/CommonServlet</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>javaeesec_basic</role-name>
		</auth-constraint>
	</security-constraint>

   <!-- ROLES DEFINITION -->
	<security-role>
		<role-name>javaeesec_basic</role-name>
	</security-role>
</web-app>
