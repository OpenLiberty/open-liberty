<server>
	<featureManager>
		<feature>jsp-2.3</feature>
        <feature>servlet-4.0</feature>
        <feature>ssl-1.0</feature>
        <feature>checkpoint-1.0</feature>
        <feature>jaxws-2.3</feature>
        <feature>appSecurity-3.0</feature>
        <feature>wssecurity-1.1</feature>
	</featureManager>

	<sslDefault sslRef="DefaultSSLSettings" />
	<ssl
		id="DefaultSSLSettings"
		keyStoreRef="myKeyStore"
		trustStoreRef="myTrustStore"
		clientAuthenticationSupported="true" />
	<keyStore
		id="myKeyStore"
		password="Liberty"
		type="jks"
		location="${server.config.dir}/key.jks" />
	<keyStore
		id="myTrustStore"
		password="LibertyServer"
		type="jks"
		location="${server.config.dir}/sslServerTrust.jks" />

	<include location="../fatTestPorts.xml" />

	<basicRegistry
		id="basic"
		realm="customRealm"
	>
		<user
			name="user1"
			password="security" />
		<user
			name="user2"
			password="security" />
		<user
			name="test1"
			password="test1" />
		<user
			name="test2"
			password="test2" />
		<user
			name="test3"
			password="test3" />
		<user
			name="test4"
			password="test4" />
		<user
			name="admin"
			password="admin" />
		<user
			name="bob"
			password="bob" />
		<user
			name="joe"
			password="joe" />
		<!-- user1pw, its password is different from CallbackHandler -->
		<user
			name="user1pw"
			password="pw8server" />
	</basicRegistry>

	<!-- basicplcy.wssecfvt.test.CommonPasswordCallback -->
	<!-- com.ibm.ws.wssecurity.example.cbh.CommonPasswordCallback -->
	<!-- com.ibm.ws.wssecurity.example.cbh.AnotherPasswordCallback -->
	<wsSecurityProvider
		id="default"
		ws-security.timestamp.timeToLive="120"
		ws-security.usernametoken.timeToLive="180"
		ws-security.cache.config.file="${server.config.dir}/cxf-ehcache_ee8.xml"
		ws-security.return.security.error="true"
	>
	<!-- 3/2021 added ws-security.return.security.error -->
	<!-- 2/2021 added for EE8 testing: ws-security.usernametoken.timeToLive="60" -->
	<!-- 4/2021 updated cxf-ehcache_ee8.xml for EE8 testing -->
	
	</wsSecurityProvider>
	<wsSecurityClient
		id="default"
		ws-security.username="user1"
		ws-security.password="security"
	>
	</wsSecurityClient>

    <include location="imports/java2Permissions.xml" />
    
</server>
