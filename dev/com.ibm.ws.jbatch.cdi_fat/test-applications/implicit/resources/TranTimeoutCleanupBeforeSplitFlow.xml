<job id="TranTimeoutCleanupBeforeSplitFLow" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
	version="1.0">
	<split id="split1">
		<flow id="flow1">
			<step id="step1">
				<properties>
					<!-- Long enough that we never timeout just because the DB is slow -->
					<property name="javax.transaction.global.timeout" value="#{jobParameters['chunkTimeSeconds']}?:3;" />
				</properties>
				<chunk item-count="3">
					<reader ref="TranTimeoutCleanupReader" />
					<writer ref="TranTimeoutCleanupWriter" />
				</chunk>
			</step>
		</flow>
		<flow id="flow2">
			<step id="step2">
				<properties>
					<!-- Long enough that we never timeout just because the DB is slow -->
					<property name="javax.transaction.global.timeout" value="#{jobParameters['chunkTimeSeconds']}?:3;"/>
				</properties>
				<chunk item-count="3">
					<reader ref="TranTimeoutCleanupReader" />
					<writer ref="TranTimeoutCleanupWriter" />
				</chunk>
			</step>
		</flow>
	</split>
</job>
