 <web-app id="BackChannelLogoutServlet" version="3.0" 
     xmlns="http://java.sun.com/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
     http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
     
  <display-name>BackChannel Logout Test App</display-name>
  <description>BackChannel Logout test application to show external app can be called.</description>
  
  <!-- SERVLET DEFINITIONS -->
  <servlet id="Servlet_1">
  	<servlet-name>BackChannelLogout</servlet-name>
  	<servlet-class>com.ibm.ws.security.fat.backChannelLogoutTestApp.BackChannelLogoutServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>

  <!-- SERVLET MAPPINGS -->        
  <servlet-mapping id="ServletMapping_1">
    <servlet-name>BackChannelLogout</servlet-name>
    <url-pattern>/saveBackChannelLogoutUri</url-pattern>
  </servlet-mapping>

  <!-- SERVLET MAPPINGS -->        
  <servlet-mapping id="ServletMapping_2">
    <servlet-name>BackChannelLogout</servlet-name>
    <url-pattern>/runBackChannelLogout</url-pattern>
  </servlet-mapping>

</web-app>



  
