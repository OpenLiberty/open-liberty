<server>

	<application
		type="war"
		id="microProfileApp"
		name="microProfileApp"
		location="${server.config.dir}/apps/microProfileApp.war"
	>
		<application-bnd>
			<security-role name="Employee">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
			<security-role name="Manager">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
			<security-role name="AllAuthenticated">
				<special-subject type="ALL_AUTHENTICATED_USERS" />
			</security-role>
		</application-bnd>
	</application>
</server>    
