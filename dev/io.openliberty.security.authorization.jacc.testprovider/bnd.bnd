-include= ~../cnf/resources/bnd/bundle.props

bVersion=1.0

Bundle-Name: Liberty Jakarta Authorization Provider 3.0
Bundle-SymbolicName: io.openliberty.security.authorization.jacc.testprovider
Bundle-Description: Liberty Jakarta Authorization Provider, version=${bVersion}

Bundle-ActivationPolicy: lazy

javac.source: 17
javac.target: 17

Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=17))"

#
# Generate an Jakarta EE compliant JAR for the bundle.
#

test.project: true

WS-TraceGroup: Authorization

Export-Package: \
 com.ibm.ws.security.authorization.jacc.provider;provide:=true, \
 com.ibm.ws.security.authorization.jacc.service;provide:=true

Import-Package: \
  com.ibm.websphere.ras, \
  com.ibm.websphere.security.auth, \
  com.ibm.websphere.security.cred, \
  com.ibm.wsspi.security.authorization.jacc, \
  com.ibm.ws.ffdc, \
  javax.security.auth, \
  javax.security.auth.login, \
  jakarta.security.jacc, \
  org.osgi.framework.*, \
  org.osgi.service.component.*

Private-Package: com.ibm.ws.security.authorization.jacc.role

Include-Resource: \
  @${repo;com.ibm.ws.security.authorization.jacc.testprovider.jakarta}!/(OSGI-INF/l10n/*|OSGI-INF/metatype/*)

-dsannotations: \
  com.ibm.ws.security.authorization.jacc.service.ProviderServiceImpl

-buildpath: \
  io.openliberty.jakarta.authorization.3.0;version=latest,\
  com.ibm.websphere.org.osgi.core;version=latest,\
  com.ibm.websphere.org.osgi.service.component;version=latest,\
  com.ibm.websphere.security;version=latest,\
  com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
  com.ibm.ws.kernel.service;version=latest,\
  com.ibm.ws.logging;version=latest,\
  com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
  com.ibm.ws.security.authorization;version=latest,\
  com.ibm.ws.security.authorization.jacc.testprovider.jakarta;version=latest,\
  io.openliberty.jacc.3.0;version=latest
