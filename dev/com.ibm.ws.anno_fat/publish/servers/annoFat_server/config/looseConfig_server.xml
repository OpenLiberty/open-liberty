<server description="Server for testing Webcontainer">

  <include location="../fatTestPorts.xml"/>

  <featureManager>
    <feature>jsp-2.2</feature>
    <feature>servlet-3.1</feature>
  </featureManager>

  <!-- logging
    traceSpecification="*=info=enabled:com.ibm.ws.anno*=finer"
    maxFileSize="20"
    maxFiles="10"
    traceFormat="BASIC"/ -->
    
  <javaPermission className="java.util.PropertyPermission"
                  name="org.glassfish.web.rfc2109_cookie_names_enforced"
                  actions="read"
                  codebase="${server.config.dir}dropins/TestServlet40.ear"/>
	
  <application location="LooseConfig.ear"/>
  <!-- LooseConfig.ear.xml will be provided -->
	
  <applicationManager useJandex="false"/>

</server>
