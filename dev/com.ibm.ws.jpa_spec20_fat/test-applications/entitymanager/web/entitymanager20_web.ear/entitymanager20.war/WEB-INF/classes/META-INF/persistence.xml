<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="EntityManager20_JEE">      
        <jta-data-source>jdbc/JPA_DS</jta-data-source>
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source> 
        <properties>
        	<property name="eclipselink.cache.shared.default" value="false"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="EntityManager20_JEE_RL" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/JPA_NJTADS</non-jta-data-source>
        <properties>
        	<property name="eclipselink.cache.shared.default" value="false"/>
        </properties>
    </persistence-unit>
    
    <persistence-unit name="ExclusiveCoonnection">      
        <jta-data-source>jdbc/JPA_DS</jta-data-source>
        <properties>
            <property name="eclipselink.jdbc.exclusive-connection.mode" value="Always"/>
            <property name="eclipselink.cache.shared.default" value="false"/>
        </properties>
    </persistence-unit>

</persistence>