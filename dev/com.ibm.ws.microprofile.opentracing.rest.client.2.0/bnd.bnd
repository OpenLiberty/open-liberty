-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0


Bundle-Name: com.ibm.ws.microprofile.opentracing.rest.client.2.0
Bundle-SymbolicName: com.ibm.ws.microprofile.opentracing.rest.client.2.0
Bundle-Description: MicroProfile.OpenTracing integration with MicroProfile REST Client, version 2.0

WS-TraceGroup: OPENTRACING

Import-Package: \
    *

Export-Package: \
	com.ibm.ws.microprofile.opentracing.rest.client.listener;version=2.0;thread-context=true


Include-Resource: \
  META-INF=resources/META-INF
  
app-resources= \
    META-INF/services/org.eclipse.microprofile.rest.client.spi.RestClientListener

Service-Component: \
  com.ibm.ws.microprofile.opentracing.rest.client.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=optional; \
	properties:="resources=${app-resources}" 

-buildpath: \
	com.ibm.ws.opentracing.2.0;version=latest, \
	com.ibm.websphere.javaee.jaxrs.2.0;version=latest, \
	com.ibm.ws.jaxrs.2.0.common;version=latest, \
	com.ibm.ws.logging;version=latest, \
	com.ibm.websphere.org.eclipse.microprofile.opentracing.2.0;version=latest, \
	com.ibm.websphere.org.eclipse.microprofile.rest.client.1.4;version=latest
	
