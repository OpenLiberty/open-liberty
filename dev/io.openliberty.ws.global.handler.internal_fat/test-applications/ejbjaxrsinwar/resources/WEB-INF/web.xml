<?xml version="1.0" encoding="UTF-8"?>
<web-app id="EJBJAXRSInWAR" version="3.0" 
     xmlns="http://java.sun.com/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
     http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
     
    <servlet>
        <servlet-name>com.ibm.ws.jaxrs.fat.ejbjaxrsinwar.nointerfaceview.provider.EchoServiceImpl</servlet-name>
        <servlet-class>com.ibm.ws.jaxrs.fat.ejbjaxrsinwar.nointerfaceview.provider.EchoServiceImpl</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.ibm.ws.jaxrs.fat.ejbjaxrsinwar.nointerfaceview.provider.EchoServiceImpl</servlet-name>
        <url-pattern>/services/jaxws</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>