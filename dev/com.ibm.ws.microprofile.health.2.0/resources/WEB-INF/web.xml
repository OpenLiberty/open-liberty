<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>health</display-name>
  <description>The IBM Health Check APIs for the Liberty server</description>

  <servlet>
    <display-name>HealthCheckServlet</display-name>
    <servlet-name>HealthCheckServlet</servlet-name>
    <servlet-class>com.ibm.ws.microprofile.health20.internal.servlet.HealthCheckServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <display-name>HealthCheckLivenessServlet</display-name>
    <servlet-name>HealthCheckLivenessServlet</servlet-name>
    <servlet-class>com.ibm.ws.microprofile.health20.internal.servlet.HealthCheckLivenessServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <display-name>HealthCheckReadinessServlet</display-name>
    <servlet-name>HealthCheckReadinessServlet</servlet-name>
    <servlet-class>com.ibm.ws.microprofile.health20.internal.servlet.HealthCheckReadinessServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>HealthCheckServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>HealthCheckLivenessServlet</servlet-name>
    <url-pattern>/live</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>HealthCheckReadinessServlet</servlet-name>
    <url-pattern>/ready</url-pattern>
  </servlet-mapping>

</web-app>
