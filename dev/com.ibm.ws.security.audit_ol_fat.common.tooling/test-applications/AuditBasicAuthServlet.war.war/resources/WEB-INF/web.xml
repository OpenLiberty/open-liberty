<?xml version="1.0" encoding="UTF-8"?>
<web-app id="AuditBasicAuthServlet" version="3.1" 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">  

	<display-name>AuditBasicAuthServlet</display-name>
	
	<!-- SERVLET DEFINITIONS -->
	<servlet>
		<display-name>AuditBasicAuthServlet</display-name>
		<servlet-name>AuditBasicAuthServlet</servlet-name>
		<servlet-class>web.AuditBasicAuthServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuditBasicAuthServlet</servlet-name>
		<url-pattern>/AuditUnprotected</url-pattern>
		<url-pattern>/AuditBasic</url-pattern>
	</servlet-mapping>

	
	<!-- SECURITY CONSTRAINTS -->
	<security-constraint>
		<display-name>basic_auth</display-name>
		<web-resource-collection>
			<web-resource-name>basic_auth_servlet</web-resource-name>
			<url-pattern>/AuditBasic</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>audit_basic</role-name>
		</auth-constraint>
	</security-constraint>
	
  <!-- CHALLENGE TYPE -->
  <login-config id="LoginConfig_1">
  	<auth-method>BASIC</auth-method>
    <realm-name>Basic Authentication</realm-name>
  </login-config> 
  
   <!-- ROLES DEFINITION -->
	<security-role>
		<role-name>audit_basic</role-name>
	</security-role>
</web-app>
