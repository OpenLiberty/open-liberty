-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

src: \
	fat/src,\
	test-bundles/cloudtx/src,\
	test-applications/transaction/src

-sub: *.bnd

fat.project: true

# Define additional tested features that are NOT present in any XML files in this bucket.
# In this case, servlet-4.0 is added programmatically at runtime by the RepeatTests rule.
tested.features:\
	servlet-4.0,\
	cdi-2.0,\
	jdbc-4.2

# To define a global minimum java level for the FAT, use the following property.
# If unspecified, the default value is ${javac.source}
# fat.minimum.java.level: 1.8

# Dependencies may be local bundles (e.g. com.ibm.websphere.javaee.servlet.3.1)
#      or binaries from Artifactory (e.g. commons-logging:commons-logging)
# For all project names that match the pattern "*_fat*", dependencies for junit,
# fattest.simplicity, and componenttest-1.0 will be automatically added to the buildpath
-buildpath: \
	com.ibm.websphere.javaee.annotation.1.1;version=latest,\
	com.ibm.websphere.javaee.servlet.3.1;version=latest,\
	com.ibm.websphere.javaee.transaction.1.1;version=latest,\
	com.ibm.tx.core;version=latest,\
	com.ibm.ws.tx.embeddable;version=latest,\
	commons-logging:commons-logging;version=1.1.3,\
	org.postgresql:postgresql;version=42.2.5,\
	org.rnorth.duct-tape:duct-tape;version=1.0.7,\
	org.testcontainers:database-commons;version=1.14.0,\
	org.testcontainers:jdbc;version=1.14.0,\
	org.testcontainers:postgresql;version=1.14.0,\
	org.testcontainers:testcontainers;version=1.14.0,\
	org.slf4j:slf4j-api;version=1.7.7,\
	com.ibm.ws.logging,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest,\
	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
	com.ibm.ws.transaction.test.util;version=latest,\
	com.ibm.ws.transaction.cloud_fat.1;version=latest
	
