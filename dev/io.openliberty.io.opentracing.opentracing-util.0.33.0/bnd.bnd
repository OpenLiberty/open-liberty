-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-Name: OpenTracing Utilities 0.33.0
Bundle-SymbolicName: io.openliberty.io.opentracing.opentracing-util.0.33.0
Bundle-Description: OpenTracing Java Utilities, version 0.33.0

-includeresource: \
  @${repo;io.opentracing:opentracing-util;0.33.0;EXACT}!/!(OSGI-OPT/src|META-INF/maven)/*,\
  @${repo;io.opentracing:opentracing-noop;0.33.0;EXACT}!/!(OSGI-OPT/src|META-INF/maven)/*

Export-Package: io.opentracing.util;version=0.33.0,\
                io.opentracing.noop;version=0.33.0

# no notice file in source jar
Include-Resource: \
  META-INF/LICENSE.txt=resources/META-INF/LICENSE.txt

instrument.disabled: true

-buildpath: \
  io.opentracing:opentracing-util;version=0.33.0,\
  io.opentracing:opentracing-noop;version=0.33.0
