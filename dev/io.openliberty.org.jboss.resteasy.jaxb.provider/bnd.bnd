-include= ~../cnf/resources/bnd/bundle.props

bVersion=1.0

Bundle-SymbolicName: io.openliberty.org.jboss.resteasy.jaxb.provider

resteasy-version=6.0.0.Final

instrument.ffdc: false
instrument.disabled: true

app-resources= \
  META-INF/services/jakarta.ws.rs.ext.Providers

-cdiannotations:

Service-Component: \
  io.openliberty.org.jboss.resteasy.jaxb.provider.ResourceProvider; \
    implementation:=com.ibm.wsspi.classloading.ResourceProvider; \
    provide:=com.ibm.wsspi.classloading.ResourceProvider; \
    configuration-policy:=optional; \
    properties:="resources=${app-resources}"

Export-Package: \
  org.jboss.resteasy.annotations.providers.jaxb;version=${resteasy-version};thread-context=true, \
  org.jboss.resteasy.plugins.providers.jaxb;version=${resteasy-version};thread-context=true
 Private-Package: \
  org.jboss.resteasy.plugins.providers.jaxb.i18n;version=${resteasy-version}

# Using version=! in order to not have a version attached to the import for packages that were removed
# from Java after Java 8.  Doing this keeps the import like before Java 11 support. It will get the
# packages from Java when using Java 8 or earlier and from the new shipped bundles for Java 9 and later.
Import-Package: \
  jakarta.xml.bind;version=!, \
  jakarta.xml.bind.annotation;version=!, \
  jakarta.xml.bind.annotation.adapters;version=!, \
  jakarta.xml.bind.attachment;version=!, \
  jakarta.xml.bind.helpers;version=!, \
  jakarta.xml.bind.util;version=!, \
  !com.sun.xml.bind.marshaller, \
  *
#  jakarta.activation;version=!, \
#  jakarta.annotation;version=!, \
#  jakarta.annotation.security;version=!, \

DynamicImport-Package: \
  com.sun.xml.bind.marshaller

Include-Resource:\
  @${repo;org.jboss.resteasy:resteasy-jaxb-provider;${resteasy-version};EXACT}
