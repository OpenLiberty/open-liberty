-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0
nettyVersion=4.1.51

Bundle-Name: Netty as an OSGi bundle
Bundle-SymbolicName: io.openliberty.netty.internal
Bundle-Description: Netty as an OSGi bundle for OpenLiberty, version ${bVersion}

-includeresource: \
  @${repo;io.netty:netty-buffer;4.1.51},\
  @${repo;io.netty:netty-codec;4.1.51},\
  @${repo;io.netty:netty-codec-http;4.1.51},\
  @${repo;io.netty:netty-codec-http2;4.1.51},\
  @${repo;io.netty:netty-codec-socks;4.1.51},\
  @${repo;io.netty:netty-common;4.1.51},\
  @${repo;io.netty:netty-handler;4.1.51},\
  @${repo;io.netty:netty-handler-proxy;4.1.51},\
  @${repo;io.netty:netty-resolver;4.1.51},\
  @${repo;io.netty:netty-transport;4.1.51}

Export-Package: \
  io.netty.*;version=${nettyVersion} -split-package:=merge-first
