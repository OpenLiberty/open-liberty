-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 1.8
javac.target: 1.8

src: \
	fat/src,\
	test-applications/schedtest/src,\
	test-bundles/timerInterfacesTestFeature/src

fat.project: true
fat.test.databases: true

