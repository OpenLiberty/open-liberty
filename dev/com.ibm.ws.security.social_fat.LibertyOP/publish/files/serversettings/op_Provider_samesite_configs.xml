<server>
	<openidConnectProvider
		id="OidcConfigSample"
		oauthProviderRef="OAuthConfigSample"
		signatureAlgorithm="RS256"
		keyStoreRef="rsa_key"
		keyAliasName="rsacert"
		requireOpenidScopeForUserInfo="false" />

	<oauthProvider
		id="OAuthConfigSample"
		jwtAccessToken="${oidcCreateJWTToken}"
		autoAuthorize="true"
		httpsRequired="false"
	>
		<autoAuthorizeClient>client01</autoAuthorizeClient>
		<autoAuthorizeClient>oidcLoginUser</autoAuthorizeClient>

		<localStore>
			<client
				name="client01"
				secret="{xor}LDo8LTor"
				displayname="client01"
				redirect="http://${fat.server.canonical.hostname}:${bvt.prop.HTTP_default}/ibm/api/social-login/redirect/oidcLogin1,https://${fat.server.canonical.hostname}:${bvt.prop.HTTP_default.secure}/ibm/api/social-login/redirect/oidcLogin1,http://localhost:${bvt.prop.HTTP_default}/ibm/api/social-login/redirect/oidcLogin1,https://localhost:${bvt.prop.HTTP_default.secure}/ibm/api/social-login/redirect/oidcLogin1,http://${fat.server.canonical.hostname}:${bvt.prop.HTTP_default}/ibm/api/social-login/redirect/oauth2Login1,https://${fat.server.canonical.hostname}:${bvt.prop.HTTP_default.secure}/ibm/api/social-login/redirect/oauth2Login1,http://localhost:${bvt.prop.HTTP_default}/ibm/api/social-login/redirect/oauth2Login1,https://localhost:${bvt.prop.HTTP_default.secure}/ibm/api/social-login/redirect/oauth2Login1"
				scope="ALL_SCOPES"
				introspectTokens="true"
				enabled="true" />
		</localStore>
	</oauthProvider>

	<oauth-roles>
		<authenticated>
			<user name="testuser" />
			<user name="oidcLoginUser" />
			<group name="group1" />
		</authenticated>
		<clientManager>
			<user name="testuser" />
			<user name="oidcLoginUser" />
			<group name="group1" />
		</clientManager>
	</oauth-roles>
	
</server>

