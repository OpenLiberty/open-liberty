<server>
  <featureManager>
    <feature>jndi-1.0</feature>
    <feature>concurrent-1.0</feature>
    <feature>jdbc-4.1</feature>
    <feature>servlet-3.1</feature>
  </featureManager>

  <dataSource jndiName="jdbc/testdb">
    <jdbcDriver libraryRef="Derby"/>
    <properties.derby.embedded createDatabase="create" databaseName="memory:testdb"/>
  </dataSource>

  <library id="Derby">
    <fileset dir="${shared.resource.dir}/derby" includes="derby.jar"/>
  </library>

  <javaPermission codebase="${server.config.dir}derby/derby-10.11.1.1.jar" className="java.security.AllPermission"/>

  <include location="../fatTestPorts.xml"/>
</server>
