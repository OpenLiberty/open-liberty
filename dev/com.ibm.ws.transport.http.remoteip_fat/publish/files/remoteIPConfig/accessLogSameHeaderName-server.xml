<server>

    <featureManager>
        <feature>servlet-3.1</feature>
    </featureManager>
    
    <include location="../fatTestCommon.xml"/>
    
    <!-- FAT framework expects to start with the usual port  -->
    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="${bvt.prop.HTTP_default}"
                  httpsPort="${bvt.prop.HTTP_default.secure}">
    		<remoteIp useRemoteIpInAccessLog="true"/>
    		<accessLogging logFormat='%a, %h, %H "%{My-Request-Header}i" "%{My-Response-Header}o" '/>
    </httpEndpoint>
    
    <application location="EndpointInformation.war" />

</server>
