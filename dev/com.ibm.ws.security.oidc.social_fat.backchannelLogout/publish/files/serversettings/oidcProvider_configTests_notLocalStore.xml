		<autoAuthorizeClient>bcl_otherDefaultBCLTimeout</autoAuthorizeClient>
		
	</oauthProvider>

	<openidConnectProvider
		id="OidcConfigSample_shortBCLTimeout"
		signatureAlgorithm="HS256"
		oauthProviderRef="OAuthConfigSample_shortBCLTimeout"
