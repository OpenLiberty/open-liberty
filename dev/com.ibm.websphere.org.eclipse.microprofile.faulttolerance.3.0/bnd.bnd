bVersion=1.0


Bundle-SymbolicName: com.ibm.websphere.org.eclipse.microprofile.faulttolerance.3.0; singleton:=true

Export-Package: \
  org.eclipse.microprofile.faulttolerance;version=1.2, \
  org.eclipse.microprofile.faulttolerance.exceptions;version=1.0

