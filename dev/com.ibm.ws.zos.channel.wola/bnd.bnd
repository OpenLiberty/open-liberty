-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-Name: z/OS WOLA Channel
Bundle-SymbolicName: com.ibm.ws.zos.channel.wola
Bundle-Description: z/OS WebSphere Optimized Local Adapter Channel; version=${bVersion}

WS-TraceGroup: zosLocalAdapters

Export-Package: com.ibm.ws.zos.channel.wola;provide:=true

Private-Package: com.ibm.ws.zos.channel.wola.internal*

Include-Resource: \
    OSGI-INF=resources/OSGI-INF

#
# The DS dependency hierarchy looks like this:
# 
# WOLAEndpoint
#       + CHFWBundle (for starting the chain)
#       + LocalCommChannelFactoryProvider (to ensure local comm is available)
#       + WOLAChannelFactoryProvider
#               + WOLANativeUtils
#                       + NativeMethodManager
#                       + MvsServices
#               + WOLAConfig
#               
# This DS dependency hierarchy is in place to ensure that WOLAEndpoint is not activated
# unless local comm services are available.  Similarly, WOLAEndpoint will be deactivated
# if the local comm bundle is stopped.
#
Service-Component: \
  com.ibm.ws.zos.channel.wola;\
    provide:=com.ibm.ws.zos.channel.wola.WolaJcaBridge; \
    implementation:=com.ibm.ws.zos.channel.wola.internal.WOLAEndpoint; \
    chfwBundle=com.ibm.websphere.channelfw.osgi.CHFWBundle; \
    wolaChannelFactoryProvider='com.ibm.websphere.channelfw.osgi.ChannelFactoryProvider(type=WOLAChannel)'; \
    localCommChannelFactoryProvider='com.ibm.websphere.channelfw.osgi.ChannelFactoryProvider(type=LocalCommChannel)'; \
    interruptObjectBridge=com.ibm.ws.zos.channel.wola.WolaInterruptObjectBridge; \
    immediate:=true;\
    greedy:="interruptObjectBridge"; \
    optional:="interruptObjectBridge"; \
    properties:='service.vendor=IBM,type:String=WOLAChannel', \
  com.ibm.ws.zos.channel.wola.config; \
    provide:=com.ibm.ws.zos.channel.wola.internal.WOLAConfig; \
    implementation:=com.ibm.ws.zos.channel.wola.internal.WOLAConfig; \
    configuration-policy:=require; \
    properties:="service.vendor=IBM", \
  com.ibm.ws.zos.channel.wola.outbound.conn.mgr; \
    provide:=com.ibm.ws.zos.channel.wola.internal.WolaOutboundConnMgr; \
    implementation:=com.ibm.ws.zos.channel.wola.internal.WolaOutboundConnMgr; \
    wolaNativeUtils=com.ibm.ws.zos.channel.wola.internal.natv.WOLANativeUtils; \
    wolaConfig=com.ibm.ws.zos.channel.wola.internal.WOLAConfig; \
    localCommClientConnHandleMap=com.ibm.ws.zos.channel.local.LocalCommClientConnHandleMap; \
    properties:="service.vendor=IBM", \
  com.ibm.ws.zos.channel.wola.jndi.cache; \
    provide:='com.ibm.ws.container.service.state.ApplicationStateListener,com.ibm.ws.zos.channel.wola.internal.WOLAJNDICache'; \
    implementation:=com.ibm.ws.zos.channel.wola.internal.WOLAJNDICacheImpl; \
    properties:="service.vendor=IBM", \
  com.ibm.ws.zos.channel.wola.native; \
    provide:=com.ibm.ws.zos.channel.wola.internal.natv.WOLANativeUtils; \
    implementation:=com.ibm.ws.zos.channel.wola.internal.natv.WOLANativeUtils; \
    nativeMethodManager=com.ibm.ws.zos.jni.NativeMethodManager; \
    interruptObjectBridge=com.ibm.ws.zos.channel.wola.WolaInterruptObjectBridge; \
    zosNativeUtils=com.ibm.ws.zos.core.utils.NativeUtils; \
    NativeServiceWOLAATCH='com.ibm.ws.zos.core.NativeService(&(native.service.name=WOLAATCH)(is.authorized=true))'; \
    NativeClientServiceWOLA1REG='com.ibm.ws.zos.core.NativeClientService(&(native.service.name=WOLA1REG)(is.authorized=true))'; \
    greedy:="interruptObjectBridge"; \
    optional:="interruptObjectBridge"; \
    properties:='service.vendor=IBM'
    
    
-dsannotations: \
  com.ibm.ws.zos.channel.wola.internal.WOLAChannelFactoryProvider, \
  com.ibm.ws.zos.channel.wola.internal.WolaSecurityInterceptor

instrument.classesExcludes: com/ibm/ws/zos/channel/wola/internal/resources/*.class

