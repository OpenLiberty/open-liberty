-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

javac.source: 1.8
javac.target: 1.8

Bundle-Name: com.ibm.ws.microprofile.metrics.3.0.monitor
Bundle-SymbolicName: com.ibm.ws.microprofile.metrics.3.0.monitor
Bundle-Description: MicroProfile Metrics Monitor Bridge Auto Feature, version ${bVersion}

Import-Package: \
	javax.enterprise.*;version="[1.1,3)",\
	org.eclipse.microprofile.metrics; version="[3.0.0,4.0.0)",\
	*

Export-Package: \
   com.ibm.ws.microprofile.metrics.monitor

Private-Package: \
    com.ibm.ws.microprofile.metrics.monitor.resources

#Include-Resource: \
#    META-INF=resources/META-INF

WS-TraceGroup: METRICS

Require-Capability: osgi.ee;filter:="(&(osgi.ee=JavaSE)(version=1.8))"

-dsannotations: com.ibm.ws.microprofile.metrics.monitor.MonitorMetricsHandler

Service-Component: \

-buildpath: \
	com.ibm.ws.logging;version=latest,\
	com.ibm.ws.microprofile.metrics.3.0;version=latest,\
	com.ibm.websphere.org.eclipse.microprofile.metrics.3.0;version=latest,\
	com.ibm.websphere.org.osgi.core,\
	com.ibm.websphere.org.osgi.service.component,\
	com.ibm.wsspi.org.osgi.service.component.annotations,\
	com.ibm.ws.anno;version=latest, \
	com.ibm.ws.org.osgi.annotation.versioning;version=latest
