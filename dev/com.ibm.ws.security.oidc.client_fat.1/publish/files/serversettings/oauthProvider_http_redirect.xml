<server>

	<openidConnectProvider
		id="OidcHttpRedirectConfigSample"
		scope="myScopeSample"
		jwkEnabled="${oidcJWKEnabled}"
		signatureAlgorithm="${oidcSignAlg}"
		oauthProviderRef="OAuthHttpRedirectConfigSample" />

	<oauthProvider
		id="OAuthHttpRedirectConfigSample"
		filter="request-url%=SimpleServlet;request-url!=snooping"
		allowPublicClients="false"
		oauthOnly="true"
		autoAuthorize="true"
		httpsRequired="false"
		jwtAccessToken="${oidcCreateJWTToken}"
	>

		<autoAuthorizeClient>client01</autoAuthorizeClient>

		<localStore>
			<client
				name="client01"
				secret="{xor}LDo8LTor"
				displayname="client01"
				redirect="http://localhost:${bvt.prop.security_2_HTTP_default}/oidcclient/redirect/httpRedirect"
				scope="ALL_SCOPES"
				enabled="true" />
		</localStore>

	</oauthProvider>

</server>
