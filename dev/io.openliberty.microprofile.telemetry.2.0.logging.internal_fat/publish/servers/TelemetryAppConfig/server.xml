<server description="Telemetry Server to test App Telemetry logs">
	<featureManager>
		<feature>mpTelemetry-2.0</feature>
		<feature>componentTest-2.0</feature>
		<feature>servlet-6.0</feature>
	</featureManager>
	
	<include location="../fatTestPorts.xml"/>
	<mpTelemetry source="message"/>
	
	<application location="MpTelemetryLogApp.war">
		<appProperties>
			<property name="otel.logs.exporter" value="logging" />
			<property name="otel.sdk.disabled" value="false" />
		</appProperties>	
	</application>
</server>