-include= ~../cnf/resources/bnd/bundle.props
bVersion=1.0

Bundle-Name: z/OS Local Channel
Bundle-SymbolicName: com.ibm.ws.zos.channel.local
Bundle-Description: z/OS Local Comm: High speed cross memory communication channel; version=${bVersion}

WS-TraceGroup: zOSLocalChannel

Export-Package: \
  com.ibm.ws.zos.channel.local;provide:=true

Private-Package: \
  com.ibm.ws.zos.channel.local.internal*, \
  com.ibm.ws.zos.channel.local.queuing*

#TODO there is no metatype, and no english metatype nls files.  Do we continue to ship the translations??
Include-Resource: \
    OSGI-INF=resources/OSGI-INF
    
#
# The DS dependency hierarchy looks like this:
# 
# LocalCommChannelFactoryProvider
#       + ExecutorService
#       + LocalChannelProvider
#               + NativeMethodManager
#               + ExecutorService
#               + DirectBufferHelper
# 
# LocalChannelProvider is injected into LocalCommChannelFactoryProvider.
# This ensures that the native side of the local comm channel (LocalChannelProvider)
# is activated before we provide the LocalCommChannelFactory to CFW.
#
-dsannotations: \
  com.ibm.ws.zos.channel.local.internal.LocalCommClientConnHandleMapImpl, \
  com.ibm.ws.zos.channel.local.internal.LocalCommChannelFactoryProvider, \
  com.ibm.ws.zos.channel.local.queuing.internal.LocalChannelProviderImpl

instrument.classesExcludes: com/ibm/ws/zos/channel/local/internal/resources/*.class

-buildpath: \
	com.ibm.ws.channelfw;version=latest,\
	com.ibm.ws.zos.core;version=latest,\
	com.ibm.websphere.org.osgi.core;version=latest,\
	com.ibm.websphere.appserver.api.kernel.service;version=latest,\
	com.ibm.websphere.org.osgi.service.component;version=latest,\
	com.ibm.wsspi.org.osgi.service.component.annotations;version=latest,\
	com.ibm.ws.logging;version=latest,\
	com.ibm.ws.org.osgi.annotation.versioning;version=latest

-testpath: \
	../build.sharedResources/lib/junit/old/junit.jar;version=file, \
	cglib:cglib-nodep;version=3.3.0, \
	com.ibm.ws.org.objenesis:objenesis;version=1.0, \
	com.ibm.ws.junit.extensions;version=latest, \
	com.ibm.ws.kernel.boot;version=latest, \
	com.ibm.ws.logging;version=latest, \
	org.hamcrest:hamcrest-all;version=1.3, \
	org.jmock:jmock-junit4;strategy=exact;version=2.5.1, \
	org.jmock:jmock;strategy=exact;version=2.5.1, \
	org.jmock:jmock-legacy;version=2.5.0