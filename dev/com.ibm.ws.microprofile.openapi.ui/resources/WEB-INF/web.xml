<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app id="OpenAPIUI" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>OpenAPIUI</display-name>
  <description>OpenAPI User Interface</description>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>headers-filter</filter-name>
    <filter-class>com.ibm.ws.microprofile.openapi.servlet.filter.OpenAPIUIFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>headers-filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>openapi-ui-filter</filter-name>
    <filter-class>com.ibm.ws.microprofile.openapi.servlet.filter.OpenAPIEndpointFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>openapi-ui-filter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>
</web-app>
