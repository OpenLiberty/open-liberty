	<include location="${shared.config.dir}/microProfileApplication.xml" />

	<include location="${shared.config.dir}/rs_fatTestPorts.xml" />

	<mpJwt
		id="mpJwt_1"
                authFilterRef="mpJwtAppAuthFilter"
		jwksUri="${mpJwt_jwksUri}"
		keyName="${mpJwt_keyName}"
