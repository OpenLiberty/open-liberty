<server description="Server for testing the Cookie SameSite attribute">

    <include location="../fatTestPorts.xml" />

    <featureManager>
        <feature>servlet-4.0</feature>
        <feature>appSecurity-2.0</feature>
        <feature>jsp-2.3</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
        host="*"
        httpPort="${bvt.prop.HTTP_default}"
        httpsPort="${bvt.prop.HTTP_default.secure}">
        <samesite none="*" partitioned="false" />
    </httpEndpoint>

    <keyStore id="defaultKeyStore" password="{xor}EzY9Oi0rJg==" /> <!-- pwd: Liberty, expires
    1/4/2099 -->

    <basicRegistry id="basic1" realm="TestRealm">
        <user name="user1" password="user1Login" />
        <group name="group1">
            <member name="user1" />
        </group>
    </basicRegistry>

    <application type="war" id="SameSiteSecurityTest" name="SameSiteSecurityTest"
        location="SameSiteSecurityTest.war">
        <application-bnd>
            <security-role name="sameSiteSecurity_basic">
                <user name="user1" />
                <group name="group1" />
            </security-role>
        </application-bnd>
    </application>

    <webAppSecurity partitionedCookie="true" />

</server>
