<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app id="PasswordUtilServlet">
  <display-name>PasswordUtil Servlet</display-name>
  <description>This is a servlet designed to test PasswordUtil API.</description>

  <!-- SERVLET DEFINITIONS -->
  <servlet id="Default">
    <servlet-name>PasswordUtilServlet</servlet-name>
    <display-name>PasswordUtil Servlet</display-name>
    <description>This is a servlet designed to drive a PasswordUtil instance.</description>
    <servlet-class>web.pu.PasswordUtilServlet</servlet-class>
    <load-on-startup></load-on-startup>
  </servlet>

  <!-- SERVLET MAPPINGS -->        
  <servlet-mapping id="ServletMapping_Default">
    <servlet-name>PasswordUtilServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
