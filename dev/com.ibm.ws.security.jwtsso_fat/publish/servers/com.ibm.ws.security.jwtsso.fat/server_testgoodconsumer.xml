<server>

    <featureManager>
        <feature>jsp-2.3</feature>        
        <feature>componenttest-1.0</feature>
        <feature>jwtSso-1.0</feature>
    </featureManager>
     <authentication cacheEnabled="false"/>
    <jwtSso  jwtBuilderRef="builder02" jwtConsumerRef="consumer45" setCookieSecureFlag="false"/>
     <jwtBuilder  id="builder02" issuer="https://flintstone:19443/jwt/defaultJWT"/>
     <jwtConsumer id="consumer45" issuer="https://flintstone:19443/jwt/defaultJWT"/>
    <include location="../fatTestPorts.xml"/>
     

    <keyStore id="defaultKeyStore" password="Liberty" />

    <basicRegistry realm="BasicRealm">
        <user name="testuser" password="testuserpwd"/>
    </basicRegistry>

    <application type="war" id="formlogin" name="formlogin" location="${server.config.dir}/apps/formlogin.war" >
        <application-bnd>
            <security-role name="Employee">
                <special-subject type="ALL_AUTHENTICATED_USERS" />
            </security-role>
            <security-role name="Manager">
                <special-subject type="ALL_AUTHENTICATED_USERS" />
            </security-role>
            <security-role name="AllAuthenticated">
                <special-subject type="ALL_AUTHENTICATED_USERS" />
            </security-role>
        </application-bnd>
    </application>

</server>