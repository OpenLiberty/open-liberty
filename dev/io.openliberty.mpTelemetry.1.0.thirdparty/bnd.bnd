-include= ~../cnf/resources/bnd/bundle.props,~../cnf/resources/bnd/transform.props
bVersion=1.0
publish.wlp.jar.suffix: dev/api/third-party
openTelemetryVersion=1.19.0

Bundle-SymbolicName: io.openliberty.mpTelemetry.1.0.thirdparty; singleton:=true

javac.source: 11
javac.target: 11

src: src

Export-Package: \
  io.opentelemetry.api; version=${openTelemetryVersion},\
  io.opentelemetry.api.baggage; version=${openTelemetryVersion},\
  io.opentelemetry.api.common; version=${openTelemetryVersion},\
  io.opentelemetry.api.trace; version=${openTelemetryVersion},\
  io.opentelemetry.context; version=${openTelemetryVersion},\
  io.opentelemetry.sdk.trace.export;version=${openTelemetryVersion},\
  io.opentelemetry.sdk.trace.data;version=${openTelemetryVersion},\
  io.opentelemetry.sdk.common;version=${openTelemetryVersion},\
  io.opentelemetry.sdk.autoconfigure.spi.traces;version=${openTelemetryVersion},\
  io.opentelemetry.sdk.autoconfigure.spi;version=${openTelemetryVersion},\
  io.opentelemetry.sdk.resources;version=${openTelemetryVersion},\
  io.opentelemetry.semconv.trace.attributes;version=${openTelemetryVersion},\
  io.opentelemetry.semconv.resource.attributes;version=${openTelemetryVersion},\
  io.opentelemetry.instrumentation.annotations;version=${openTelemetryVersion}

Import-Package: \
  io.opentelemetry.*;version="[${openTelemetryVersion},2)",\
  *
  
-buildpath: \
  io.openliberty.jakarta.interceptor.2.1;version=latest,\
  io.opentelemetry:opentelemetry-api;version=1.19.0,\
  io.opentelemetry:opentelemetry-context;version=1.19.0,\
  io.opentelemetry:opentelemetry-sdk;version=1.19.0,\
  io.opentelemetry:opentelemetry-sdk-common;version=1.19.0,\
  io.opentelemetry:opentelemetry-sdk-extension-autoconfigure-spi;version=1.19.0,\
  io.opentelemetry:opentelemetry-semconv;version=1.19.0.alpha,\
  io.opentelemetry:opentelemetry-sdk-trace;version=1.19.0,\
  io.opentelemetry.instrumentation:opentelemetry-instrumentation-annotations;version=1.19.0.alpha
  
Require-Capability: osgi.ee; filter:="(&(osgi.ee=JavaSE)(version=11))"

WS-TraceGroup: opentelemetry