<?xml version="1.0" encoding="UTF-8"?>
<project name="ant_featureTasks" default="package">
  <import file="../ant_build/public_imports/standard_imports.xml" />

  <target name="package" depends="compile">
    <mkdir dir="${lib.dir}" />
  	<copy todir="${classes.dir}">
  	  <fileset dir="${src.dir}" includes="**/*.properties" />
  	</copy>
    <jar destfile="${lib.dir}/wlp-featureTasks.jar">
      <fileset dir="${classes.dir}" />
    </jar>
  </target>
  
  <target name="publish" depends="package" description="Manual target: copy jar to ant_build/lib">
    <!-- MANUAL TARGET -->
    <copy todir="../ant_build/lib" file="${lib.dir}/wlp-featureTasks.jar" />
  </target>


  <!-- We don't want to run findbugs on this ant tool  -->
  <target name="findbugs"/>

  <target name="javadoc" />
</project>