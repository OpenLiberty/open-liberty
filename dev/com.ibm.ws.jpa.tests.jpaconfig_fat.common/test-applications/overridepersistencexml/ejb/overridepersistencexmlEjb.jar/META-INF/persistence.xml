<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="OverridePersistenceXml_JTA">
        <jta-data-source>jdbc/JPA_JTA_DS</jta-data-source>
        <non-jta-data-source>jdbc/JPA_NJTA_DS</non-jta-data-source>
        <shared-cache-mode>NONE</shared-cache-mode>
        <properties>
            <property name="eclipselink.logging.parameters" value="true"/>

            <!-- This property is set here to test its value is overridden by JPAComponent configuration -->
            <property name="javax.persistence.lock.timeout" value="23456"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="OverridePersistenceXml_RL" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/JPA_NJTA_DS</non-jta-data-source>
        <shared-cache-mode>NONE</shared-cache-mode>
        <properties>
            <property name="eclipselink.logging.parameters" value="true"/>

            <!-- This property is set here to test its value is overridden by JPAComponent configuration -->
            <property name="javax.persistence.lock.timeout" value="23456"/>
        </properties>
    </persistence-unit>
</persistence>